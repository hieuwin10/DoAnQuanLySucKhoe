@page
@using DoAnChamSocSucKhoe.Models
@using DoAnChamSocSucKhoe.Areas.Identity.Pages.Account
@model ResetPasswordConfirmation
@{
    ViewData["Title"] = "Đặt lại mật khẩu xác nhận";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 text-center">
                    <h2 class="mb-4">@ViewData["Title"]</h2>
                    <p>
                        Mật khẩu của bạn đã được đặt lại. Vui lòng <a asp-page="./Login">nhấp vào đây để đăng nhập</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 