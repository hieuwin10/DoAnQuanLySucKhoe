@model DoAnChamSocSucKhoe.Models.TuVanSucKhoe
@{
    ViewData["Title"] = "Chi tiết tư vấn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Tư vấn sức khỏe</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Caregiver" asp-controller="Dashboard" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Tư vấn</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
        </div>
    </div>
    
    <!-- Chat Container -->
    <div class="card">
        <div class="card-body p-0">
            <div class="d-flex" style="height: calc(100vh - 200px);">
                <!-- Danh sách tư vấn (Sidebar trái) -->
                <div class="border-end" style="width: 300px; overflow-y: auto;">
                    <div class="p-3 border-bottom">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm...">
                            <button class="btn btn-outline-secondary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    
                    @if (ViewBag.DanhSachTuVan != null)
                    {
                        foreach (var tuVan in ViewBag.DanhSachTuVan)
                        {
                            <div class="p-3 border-bottom @(tuVan.TuVanSucKhoeId == Model.TuVanSucKhoeId ? "bg-light" : "")">
                                <a asp-action="Chat" asp-route-id="@tuVan.TuVanSucKhoeId" class="text-decoration-none text-dark">
                                    <div class="d-flex">
                                        @if (tuVan.ChuyenGia != null && tuVan.ChuyenGia.NguoiDung != null)
                                        {
                                            <img src="@(string.IsNullOrEmpty(tuVan.ChuyenGia.NguoiDung.AnhDaiDien) ? "/images/default-avatar.png" : tuVan.ChuyenGia.NguoiDung.AnhDaiDien)" 
                                                 class="rounded-circle me-2" width="48" height="48" alt="@tuVan.ChuyenGia.NguoiDung.HoTen">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 48px; height: 48px;">
                                                <i class="fas fa-user-md"></i>
                                            </div>
                                        }
                                        <div class="ms-2 flex-grow-1 min-width-0">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0 text-truncate">@tuVan.TieuDe</h6>
                                                <small class="text-muted">@tuVan.NgayCapNhat.ToString("dd/MM")</small>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <p class="text-muted small mb-0 text-truncate">
                                                    @(tuVan.ChuyenGia != null && tuVan.ChuyenGia.NguoiDung != null ? tuVan.ChuyenGia.NguoiDung.HoTen : "Chưa phân công")
                                                </p>
                                                @switch (tuVan.TrangThai)
                                                {
                                                    case 0:
                                                        <span class="badge bg-warning ms-2">Chờ</span>
                                                        break;
                                                    case 1:
                                                        <span class="badge bg-success ms-2">Trả lời</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-danger ms-2">Hủy</span>
                                                        break;
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
                
                <!-- Chat chính -->
                <div class="d-flex flex-column flex-grow-1 bg-white">
                    <!-- Header -->
                    <div class="p-3 border-bottom">
                        <div class="d-flex align-items-center">
                            @if (Model.ChuyenGia != null && Model.ChuyenGia.NguoiDung != null)
                            {
                                <img src="@(string.IsNullOrEmpty(Model.ChuyenGia.NguoiDung.AnhDaiDien) ? "/images/default-avatar.png" : Model.ChuyenGia.NguoiDung.AnhDaiDien)" 
                                     class="rounded-circle me-2" width="48" height="48" alt="@Model.ChuyenGia.NguoiDung.HoTen">
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 48px; height: 48px;">
                                    <i class="fas fa-user-md"></i>
                                </div>
                            }
                            <div>
                                <h6 class="mb-0">
                                    @(Model.ChuyenGia != null && Model.ChuyenGia.NguoiDung != null ? Model.ChuyenGia.NguoiDung.HoTen : "Chưa phân công chuyên gia")
                                </h6>
                                <p class="text-muted small mb-0">
                                    @(Model.ChuyenGia != null ? Model.ChuyenGia.ChuyenKhoa : "")
                                    <span class="ms-2">
                                        @switch (Model.TrangThai)
                                        {
                                            case 0:
                                                <span class="badge bg-warning">Chờ tư vấn</span>
                                                break;
                                            case 1:
                                                <span class="badge bg-success">Đã tư vấn</span>
                                                break;
                                            case 2:
                                                <span class="badge bg-danger">Đã hủy</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">Không xác định</span>
                                                break;
                                        }
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Chat body -->
                    <div class="p-3 flex-grow-1" style="overflow-y: auto;" id="chatMessages">
                        <!-- Ngày tạo -->
                        <div class="text-center mb-3">
                            <span class="badge bg-light text-dark">@Model.NgayTao.ToString("dd/MM/yyyy")</span>
                        </div>
                        
                        <!-- Tin nhắn ban đầu -->
                        <div class="mb-3">
                            <div class="d-flex mb-2">
                                <div class="me-2">
                                    <img src="/images/patient-avatar.jpg" class="rounded-circle" width="40" height="40" alt="Bạn">
                                </div>
                                <div class="bg-light p-3 rounded-3 flex-grow-1">
                                    <h6 class="mb-1">@Model.TieuDe</h6>
                                    <p class="mb-1" style="white-space: pre-line;">@Model.NoiDung</p>
                                    <small class="text-muted">@Model.NgayTao.ToString("HH:mm")</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Tin nhắn phản hồi của chuyên gia (nếu có) -->
                        @if (!string.IsNullOrWhiteSpace(Model.TraLoi))
                        {
                            <div class="mb-3">
                                <div class="d-flex mb-2 flex-row-reverse">
                                    <div class="ms-2">
                                        @if (Model.ChuyenGia != null && Model.ChuyenGia.NguoiDung != null && !string.IsNullOrEmpty(Model.ChuyenGia.NguoiDung.AnhDaiDien))
                                        {
                                            <img src="@Model.ChuyenGia.NguoiDung.AnhDaiDien" class="rounded-circle" width="40" height="40" alt="@Model.ChuyenGia.NguoiDung.HoTen">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="fas fa-user-md"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="bg-primary text-white p-3 rounded-3 flex-grow-1">
                                        <p class="mb-1" style="white-space: pre-line;">@Model.TraLoi</p>
                                        <small class="text-light">@Model.NgayCapNhat.ToString("HH:mm")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <!-- Chat footer -->
                    <div class="p-3 border-top">
                        @if (Model.TrangThai != 2) // Nếu không phải trạng thái Đã hủy
                        {
                            <form asp-action="SendMessage" method="post">
                                <input type="hidden" name="tuVanId" value="@Model.TuVanSucKhoeId" />
                                <div class="d-flex">
                                    <textarea class="form-control me-2" name="noiDung" rows="1" placeholder="Nhập tin nhắn..." required></textarea>
                                    <button type="submit" class="btn btn-primary px-3">
                                        <i class="fas fa-paper-plane"></i>
                                    </button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-danger mb-0">
                                Tư vấn này đã bị hủy. Bạn không thể gửi thêm tin nhắn.
                            </div>
                        }
                    </div>
                </div>
                
                <!-- Thông tin chi tiết (Sidebar phải) -->
                <div class="border-start" style="width: 350px; overflow-y: auto;">
                    <div class="p-3 border-bottom d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">Thông tin tư vấn</h6>
                    </div>
                    
                    <div class="p-3">
                        <div class="mb-4">
                            <h6 class="border-bottom pb-2 mb-3">Thông tin chung</h6>
                            <div class="d-flex mb-2">
                                <div class="text-muted" style="width: 120px;">Chuyên gia:</div>
                                <div>@(Model.ChuyenGia != null && Model.ChuyenGia.NguoiDung != null ? Model.ChuyenGia.NguoiDung.HoTen : "Chưa phân công")</div>
                            </div>
                            <div class="d-flex mb-2">
                                <div class="text-muted" style="width: 120px;">Chuyên khoa:</div>
                                <div>@(Model.ChuyenGia != null ? Model.ChuyenGia.ChuyenKhoa : "-")</div>
                            </div>
                            <div class="d-flex mb-2">
                                <div class="text-muted" style="width: 120px;">Ngày tạo:</div>
                                <div>@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="d-flex mb-2">
                                <div class="text-muted" style="width: 120px;">Cập nhật:</div>
                                <div>@Model.NgayCapNhat.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="d-flex mb-2">
                                <div class="text-muted" style="width: 120px;">Trạng thái:</div>
                                <div>
                                    @switch (Model.TrangThai)
                                    {
                                        case 0:
                                            <span class="badge bg-warning">Chờ tư vấn</span>
                                            break;
                                        case 1:
                                            <span class="badge bg-success">Đã tư vấn</span>
                                            break;
                                        case 2:
                                            <span class="badge bg-danger">Đã hủy</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">Không xác định</span>
                                            break;
                                    }
                                </div>
                            </div>
                        </div>
                        
                        @if (ViewBag.HoSoSucKhoe != null)
                        {
                            <div class="mb-4">
                                <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                                    <h6 class="mb-0">Hồ sơ sức khỏe</h6>
                                    <a asp-area="Caregiver" asp-controller="HealthProfile" asp-action="Index" class="text-primary small">Xem đầy đủ</a>
                                </div>
                                
                                <div class="d-flex mb-2">
                                    <div class="text-muted" style="width: 120px;">Chiều cao:</div>
                                    <div>@ViewBag.HoSoSucKhoe.ChieuCao cm</div>
                                </div>
                                <div class="d-flex mb-2">
                                    <div class="text-muted" style="width: 120px;">Cân nặng:</div>
                                    <div>@ViewBag.HoSoSucKhoe.CanNang kg</div>
                                </div>
                                <div class="d-flex mb-2">
                                    <div class="text-muted" style="width: 120px;">Nhịp tim:</div>
                                    <div>@ViewBag.HoSoSucKhoe.NhipTim bpm</div>
                                </div>
                                <div class="d-flex mb-2">
                                    <div class="text-muted" style="width: 120px;">Huyết áp:</div>
                                    <div>@ViewBag.HoSoSucKhoe.HuyetApTamThu/@ViewBag.HoSoSucKhoe.HuyetApTamTruong mmHg</div>
                                </div>
                                <div class="d-flex mb-2">
                                    <div class="text-muted" style="width: 120px;">Đường huyết:</div>
                                    <div>@ViewBag.HoSoSucKhoe.DuongHuyet mmol/L</div>
                                </div>
                            </div>
                        }
                        
                        <div class="mb-4">
                            <h6 class="border-bottom pb-2 mb-3">Hành động</h6>
                            <div class="d-grid gap-2">
                                <a asp-area="Caregiver" asp-controller="Appointment" asp-action="Index" class="btn btn-primary">
                                    <i class="fas fa-calendar-plus me-2"></i> Đặt lịch hẹn
                                </a>
                                
                                @if (Model.TrangThai != 2) // Nếu chưa hủy thì hiển thị nút hủy
                                {
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelConsultationModal">
                                        <i class="fas fa-ban me-2"></i> Hủy tư vấn
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Hủy Tư Vấn -->
<div class="modal fade" id="cancelConsultationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận hủy tư vấn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn hủy yêu cầu tư vấn này không?</p>
                <p class="text-danger">Lưu ý: Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <form asp-action="Cancel" method="post">
                    <input type="hidden" name="id" value="@Model.TuVanSucKhoeId" />
                    <button type="submit" class="btn btn-danger">Xác nhận hủy</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tự động scroll xuống cuối cùng của chat
            const chatMessages = document.getElementById('chatMessages');
            if (chatMessages) {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
            
            // Auto-resize textarea
            const textarea = document.querySelector('textarea[name="noiDung"]');
            if (textarea) {
                textarea.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                    
                    // Giới hạn chiều cao tối đa
                    const maxHeight = 150;
                    if (this.scrollHeight > maxHeight) {
                        this.style.height = maxHeight + 'px';
                        this.style.overflowY = 'auto';
                    } else {
                        this.style.overflowY = 'hidden';
                    }
                });
            }
            
            // Thêm Font Awesome nếu chưa có
            if (!document.querySelector('link[href*="font-awesome"]')) {
                const link = document.createElement('link');
                link.rel = 'stylesheet';
                link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css';
                document.head.appendChild(link);
            }
        });
    </script>
}
