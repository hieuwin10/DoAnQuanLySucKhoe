@using DoAnChamSocSucKhoe.Models
@model HoSoSucKhoe

@{
    ViewData["Title"] = "Hồ Sơ Sức Khỏe";
}

<div class="page-hero">
    <div class="container">
        <h2>Hồ Sơ Sức Khỏe Cá Nhân</h2>
        <p>Theo dõi các chỉ số sức khỏe quan trọng của bạn</p>
    </div>
</div>

<div class="container main-container">
    @if (Model != null)
    {
        <div class="search-box-container">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-heartbeat me-2"></i>Chỉ số sức khỏe</h5>
                <div>
                    <a href="@Url.Action("Edit", "HealthProfile")" class="btn btn-primary rounded-pill px-4">
                        <i class="fas fa-edit me-2"></i>Cập Nhật
                    </a>
                    <a href="@Url.Action("History", "HealthProfile")" class="btn btn-outline-secondary rounded-pill px-4 ms-2">
                        <i class="fas fa-history me-2"></i>Lịch Sử
                    </a>
                    <a href="@Url.Action("Index", "Reminder")" class="btn btn-info text-white rounded-pill px-4 ms-2">
                        <i class="fas fa-bell me-2"></i>Nhắc nhở
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="feature-card text-center">
                    <div class="feature-icon-box bg-gradient-primary">
                        <i class="fas fa-ruler-vertical"></i>
                    </div>
                    <h5 class="card-title">Chiều Cao</h5>
                    <h3 class="text-primary fw-bold">@Model.ChieuCao <small class="text-muted fs-6">cm</small></h3>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="feature-card text-center">
                    <div class="feature-icon-box bg-gradient-success">
                        <i class="fas fa-weight"></i>
                    </div>
                    <h5 class="card-title">Cân Nặng</h5>
                    <h3 class="text-success fw-bold">@Model.CanNang <small class="text-muted fs-6">kg</small></h3>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="feature-card text-center">
                    <div class="feature-icon-box bg-gradient-warning">
                        <i class="fas fa-calculator"></i>
                    </div>
                    <h5 class="card-title">BMI</h5>
                    <h3 class="text-warning fw-bold">
                        @(Model.CanNang > 0 && Model.ChieuCao > 0 ? (Convert.ToDouble(Model.CanNang) / Math.Pow((double)Model.ChieuCao / 100, 2)).ToString("F1") : "N/A")
                    </h3>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="feature-card text-center">
                    <div class="feature-icon-box bg-gradient-danger-real">
                        <i class="fas fa-heartbeat"></i>
                    </div>
                    <h5 class="card-title">Nhịp Tim</h5>
                    <h3 class="text-danger fw-bold">@Model.NhipTim <small class="text-muted fs-6">bpm</small></h3>
                </div>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <div class="feature-card">
                    <div class="d-flex align-items-center">
                        <div class="feature-icon-box bg-gradient-info mb-0 me-3" style="width: 50px; height: 50px; font-size: 1.5rem; margin-left: 0; margin-right: 0;">
                            <i class="fas fa-tint"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Huyết Áp</h5>
                            <h3 class="text-info fw-bold mb-0">@Model.HuyetApTamThu / @Model.HuyetApTamTruong <small class="text-muted fs-6">mmHg</small></h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="feature-card">
                    <div class="d-flex align-items-center">
                        <div class="feature-icon-box bg-secondary mb-0 me-3" style="width: 50px; height: 50px; font-size: 1.5rem; margin-left: 0; margin-right: 0;">
                            <i class="fas fa-vial"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Đường Huyết</h5>
                            <h3 class="text-secondary fw-bold mb-0">@Model.DuongHuyet <small class="text-muted fs-6">mmol/L</small></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center p-5">
            <i class="fas fa-info-circle fa-3x mb-3"></i>
            <h4>Bạn chưa có hồ sơ sức khỏe</h4>
            <p>Hãy cập nhật thông tin để theo dõi sức khỏe tốt hơn.</p>
            <a href="@Url.Action("Edit", "HealthProfile")" class="btn btn-primary rounded-pill px-4 mt-2">Tạo hồ sơ mới</a>
        </div>
    }
</div>
