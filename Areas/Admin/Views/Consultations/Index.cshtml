@model DoAnChamSocSucKhoe.Areas.Admin.Models.ConsultationListViewModel

@{
    ViewData["Title"] = "Quản lý tư vấn";
    Layout = "_AdminLayout";
}

<div class="container-fluid p-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-2">Quản lý tư vấn</h1>
            <p class="text-muted fs-5">Quản lý các yêu cầu tư vấn sức khỏe từ bệnh nhân</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-comments fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Tổng tư vấn</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.TotalConsultations</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-clock fa-2x text-warning"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Chờ trả lời</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.PendingConsultations</h2>
                        <div class="progress mt-2" style="height: 6px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.Stats.PendingPercentage%" aria-valuenow="@Model.Stats.PendingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Đã trả lời</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.AnsweredConsultations</h2>
                        <div class="progress mt-2" style="height: 6px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @Model.Stats.AnsweredPercentage%" aria-valuenow="@Model.Stats.AnsweredPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-calendar-day fa-2x text-info"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Hôm nay</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.TodayConsultations</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" name="searchTerm" value="@Model.SearchTerm"
                               class="form-control border-start-0 ps-0" placeholder="Tìm theo tiêu đề, nội dung, tên bệnh nhân...">
                    </div>
                </div>
                <div class="col-md-4">
                    <select name="statusFilter" class="form-select form-select-lg">
                        <option value="all" selected="@(Model.StatusFilter == "all")">Tất cả trạng thái</option>
                        <option value="pending" selected="@(Model.StatusFilter == "pending")">Chờ trả lời</option>
                        <option value="answered" selected="@(Model.StatusFilter == "answered")">Đã trả lời</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Consultations List -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            @if (Model.Consultations.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-dark">
                            <tr>
                                <th class="py-4 ps-4 border-0 rounded-top-left">Tiêu đề</th>
                                <th class="py-4 border-0">Bệnh nhân</th>
                                <th class="py-4 border-0">Bác sĩ</th>
                                <th class="py-4 border-0">Thời gian</th>
                                <th class="py-4 border-0">Trạng thái</th>
                                <th class="py-4 pe-4 text-end border-0 rounded-top-right">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var consultation in Model.Consultations)
                            {
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div class="fw-bold text-dark fs-5 mb-1">@consultation.TieuDe</div>
                                        <small class="text-muted text-truncate d-block" style="max-width: 300px;">@consultation.NoiDung</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle p-2 me-2">
                                                <i class="fas fa-user text-secondary"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold">@consultation.PatientName</div>
                                                <small class="text-muted">@consultation.PatientEmail</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(consultation.DoctorName))
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="bg-light rounded-circle p-2 me-2">
                                                    <i class="fas fa-user-md text-info"></i>
                                                </div>
                                                <span class="fw-bold">@consultation.DoctorName</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa chỉ định</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold">@consultation.TimeAgo</span>
                                            @if (consultation.IsAnswered)
                                            {
                                                <small class="text-success"><i class="fas fa-check me-1"></i>Đã trả lời @consultation.ReplyTimeAgo</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (consultation.Status == "Pending")
                                        {
                                            <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill">Chờ trả lời</span>
                                        }
                                        else if (consultation.Status == "Answered")
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Đã trả lời</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary px-3 py-2 rounded-pill">@consultation.Status</span>
                                        }
                                    </td>
                                    <td class="pe-4 text-end">
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", new { id = consultation.Id })"
                                               class="btn btn-light btn-sm rounded-pill me-2 shadow-sm" title="Xem chi tiết">
                                                <i class="fas fa-eye text-info"></i>
                                            </a>
                                            @if (!consultation.IsAnswered)
                                            {
                                                <a href="@Url.Action("Reply", new { id = consultation.Id })"
                                                   class="btn btn-primary btn-sm rounded-pill shadow-sm" title="Trả lời">
                                                    <i class="fas fa-reply me-1"></i> Trả lời
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer bg-white border-0 py-4">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-0">
                                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                    <a class="page-link rounded-circle mx-1 border-0 bg-light text-dark" href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, searchTerm = Model.SearchTerm, statusFilter = Model.StatusFilter })">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>

                                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link rounded-circle mx-1 border-0 @(i == Model.PageNumber ? "bg-primary text-white shadow-sm" : "bg-light text-dark")" href="@Url.Action("Index", new { pageNumber = i, searchTerm = Model.SearchTerm, statusFilter = Model.StatusFilter })">
                                            @i
                                        </a>
                                    </li>
                                }

                                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link rounded-circle mx-1 border-0 bg-light text-dark" href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, searchTerm = Model.SearchTerm, statusFilter = Model.StatusFilter })">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                        <i class="fas fa-comments fa-3x text-muted"></i>
                    </div>
                    <h5 class="text-muted fw-bold">Không có tư vấn nào</h5>
                    <p class="text-muted">Chưa có yêu cầu tư vấn nào từ bệnh nhân.</p>
                </div>
            }
        </div>
    </div>
</div>