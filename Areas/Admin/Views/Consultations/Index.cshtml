@model DoAnChamSocSucKhoe.Areas.Admin.Models.ConsultationListViewModel

@{
    ViewData["Title"] = "Quản lý tư vấn";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-comments me-2"></i>Quản lý tư vấn
            </h1>
            <p class="text-muted mb-0">Quản lý các yêu cầu tư vấn sức khỏe từ bệnh nhân</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng tư vấn</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Stats.TotalConsultations</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Chờ trả lời</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Stats.PendingConsultations</div>
                            <div class="mt-2">
                                <progress value="@Model.Stats.PendingPercentage" max="100" class="w-100" style="height: 5px;"></progress>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Đã trả lời</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Stats.AnsweredConsultations</div>
                            <div class="mt-2">
                                <progress value="@Model.Stats.AnsweredPercentage" max="100" class="w-100" style="height: 5px;"></progress>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Hôm nay</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Stats.TodayConsultations</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tìm kiếm và lọc</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchTerm" value="@Model.SearchTerm"
                           class="form-control" placeholder="Tìm theo tiêu đề, nội dung, tên bệnh nhân...">
                </div>
                <div class="col-md-3">
                    <select name="statusFilter" class="form-select">
                        <option value="all" selected="@(Model.StatusFilter == "all")">Tất cả trạng thái</option>
                        <option value="pending" selected="@(Model.StatusFilter == "pending")">Chờ trả lời</option>
                        <option value="answered" selected="@(Model.StatusFilter == "answered")">Đã trả lời</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Consultations List -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách tư vấn</h6>
        </div>
        <div class="card-body">
            @if (Model.Consultations.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Bệnh nhân</th>
                                <th>Bác sĩ</th>
                                <th>Thời gian</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var consultation in Model.Consultations)
                            {
                                <tr>
                                    <td>@consultation.Id</td>
                                    <td>
                                        <strong>@consultation.TieuDe</strong>
                                        <br>
                                        <small class="text-muted">@consultation.NoiDung</small>
                                    </td>
                                    <td>
                                        <strong>@consultation.PatientName</strong>
                                        <br>
                                        <small class="text-muted">@consultation.PatientEmail</small>
                                    </td>
                                    <td>@consultation.DoctorName</td>
                                    <td>
                                        <div>@consultation.TimeAgo</div>
                                        @if (consultation.IsAnswered)
                                        {
                                            <small class="text-success">Trả lời: @consultation.ReplyTimeAgo</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@consultation.StatusClass">@consultation.Status</span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", new { id = consultation.Id })"
                                               class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i> Xem
                                            </a>
                                            @if (!consultation.IsAnswered)
                                            {
                                                <a href="@Url.Action("Reply", new { id = consultation.Id })"
                                                   class="btn btn-sm btn-success">
                                                    <i class="fas fa-reply"></i> Trả lời
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, searchTerm = Model.SearchTerm, statusFilter = Model.StatusFilter })">
                                        Trước
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, searchTerm = Model.SearchTerm, statusFilter = Model.StatusFilter })">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, searchTerm = Model.SearchTerm, statusFilter = Model.StatusFilter })">
                                        Sau
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-comments fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-muted">Không có tư vấn nào</h5>
                    <p class="text-muted">Chưa có yêu cầu tư vấn nào từ bệnh nhân.</p>
                </div>
            }
        </div>
    </div>
</div>