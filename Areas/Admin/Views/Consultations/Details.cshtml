@model DoAnChamSocSucKhoe.Areas.Admin.Models.ConsultationDetailViewModel

@{
    ViewData["Title"] = "Chi tiết tư vấn";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-eye me-2"></i>Chi tiết tư vấn
            </h1>
            <p class="text-muted mb-0">Xem chi tiết yêu cầu tư vấn từ bệnh nhân</p>
        </div>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
            @if (!Model.IsAnswered)
            {
                <a href="@Url.Action("Reply", new { id = Model.Id })" class="btn btn-success">
                    <i class="fas fa-reply me-2"></i>Trả lời
                </a>
            }
        </div>
    </div>

    <!-- Consultation Details -->
    <div class="row">
        <div class="col-lg-8">
            <!-- Consultation Content -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-comment me-2"></i>Nội dung tư vấn
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="card-title">@Model.TieuDe</h5>
                        <div class="text-muted mb-3">
                            <i class="fas fa-calendar me-1"></i>@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")
                            <span class="badge bg-@(Model.IsAnswered ? "success" : "warning") ms-2">@Model.Status</span>
                        </div>
                        <div class="consultation-content">
                            @Html.Raw(Model.NoiDung.Replace("\n", "<br>"))
                        </div>
                    </div>

                    @if (Model.IsAnswered)
                    {
                        <hr>
                        <div class="reply-section">
                            <h6 class="text-success mb-3">
                                <i class="fas fa-reply me-2"></i>Trả lời từ bác sĩ
                            </h6>
                            <div class="bg-light p-3 rounded">
                                <div class="text-muted mb-2">
                                    <i class="fas fa-calendar me-1"></i>Trả lời lúc: @Model.NgayTraLoi?.ToString("dd/MM/yyyy HH:mm")
                                </div>
                                <div class="reply-content">
                                    @Html.Raw(Model.TraLoi?.Replace("\n", "<br>") ?? "")
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Patient Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user me-2"></i>Thông tin bệnh nhân
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar-circle bg-primary text-white mx-auto mb-2">
                            <i class="fas fa-user fa-2x"></i>
                        </div>
                        <h6 class="mb-1">@Model.PatientName</h6>
                        <small class="text-muted">Bệnh nhân</small>
                    </div>

                    <div class="info-list">
                        <div class="info-item">
                            <i class="fas fa-envelope text-muted me-2"></i>
                            <span>@Model.PatientEmail</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.PatientPhone))
                        {
                            <div class="info-item">
                                <i class="fas fa-phone text-muted me-2"></i>
                                <span>@Model.PatientPhone</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Doctor Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user-md me-2"></i>Thông tin bác sĩ
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar-circle bg-success text-white mx-auto mb-2">
                            <i class="fas fa-user-md fa-2x"></i>
                        </div>
                        <h6 class="mb-1">@Model.DoctorName</h6>
                        <small class="text-muted">Bác sĩ phụ trách</small>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-cogs me-2"></i>Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (!Model.IsAnswered)
                        {
                            <a href="@Url.Action("Reply", new { id = Model.Id })" class="btn btn-success">
                                <i class="fas fa-reply me-2"></i>Trả lời tư vấn
                            </a>
                        }
                        <button type="button" class="btn btn-danger" onclick="confirmDelete(@Model.Id)">
                            <i class="fas fa-trash me-2"></i>Xóa tư vấn
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa tư vấn này? Hành động này không thể hoàn tác.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            const deleteForm = document.getElementById('deleteForm');
            deleteForm.action = '@Url.Action("Delete", "Consultations")/' + id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}

<style>
    .avatar-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-list .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
        padding: 0.5rem;
        background-color: #f8f9fc;
        border-radius: 0.375rem;
    }

    .consultation-content, .reply-content {
        line-height: 1.6;
        white-space: pre-wrap;
    }

    .reply-section {
        border-left: 4px solid #28a745;
        padding-left: 1rem;
    }
</style>