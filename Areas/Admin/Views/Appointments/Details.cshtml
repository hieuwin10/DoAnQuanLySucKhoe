@model DoAnChamSocSucKhoe.Areas.Admin.Models.AppointmentDetailViewModel

@{
    ViewData["Title"] = "Chi tiết lịch hẹn";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-calendar-check me-2"></i>Chi tiết lịch hẹn
            </h1>
            <p class="text-muted mb-0">Thông tin chi tiết về lịch hẹn khám bệnh</p>
        </div>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </a>
        </div>
    </div>

    <!-- Appointment Details -->
    <div class="row">
        <div class="col-lg-8">
            <!-- Appointment Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Thông tin lịch hẹn
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Mã lịch hẹn:</label>
                                <p class="mb-0">#@Model.Id</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Trạng thái:</label>
                                <p class="mb-0">
                                    <span class="badge bg-@Model.StatusClass">@Model.Status</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ngày giờ:</label>
                                <p class="mb-0">
                                    <i class="fas fa-calendar me-2"></i>@Model.DateTime.ToString("dddd, dd/MM/yyyy")
                                    <br>
                                    <i class="fas fa-clock me-2"></i>@Model.DateTime.ToString("HH:mm")
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Địa điểm:</label>
                                <p class="mb-0">
                                    <i class="fas fa-map-marker-alt me-2"></i>@Model.Location
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Lý do:</label>
                        <p class="mb-0">@Model.Reason</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Diagnosis))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Chẩn đoán:</label>
                            <p class="mb-0">@Model.Diagnosis</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Prescription))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Đơn thuốc:</label>
                            <p class="mb-0">@Model.Prescription</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ghi chú:</label>
                            <p class="mb-0">@Model.Notes</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Patient Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user me-2"></i>Thông tin bệnh nhân
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar-circle bg-primary text-white mx-auto mb-2">
                            <i class="fas fa-user fa-2x"></i>
                        </div>
                        <h6 class="mb-1">@Model.PatientName</h6>
                        <small class="text-muted">Bệnh nhân</small>
                    </div>

                    <div class="info-list">
                        <div class="info-item">
                            <i class="fas fa-envelope text-muted me-2"></i>
                            <span>@Model.PatientEmail</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.PatientPhone))
                        {
                            <div class="info-item">
                                <i class="fas fa-phone text-muted me-2"></i>
                                <span>@Model.PatientPhone</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Doctor Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user-md me-2"></i>Thông tin bác sĩ
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar-circle bg-success text-white mx-auto mb-2">
                            <i class="fas fa-user-md fa-2x"></i>
                        </div>
                        <h6 class="mb-1">@Model.DoctorName</h6>
                        <small class="text-muted">Bác sĩ phụ trách</small>
                    </div>

                    <div class="info-list">
                        <div class="info-item">
                            <i class="fas fa-envelope text-muted me-2"></i>
                            <span>@Model.DoctorEmail</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-cogs me-2"></i>Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Chỉnh sửa lịch hẹn
                        </a>
                        <button type="button" class="btn btn-danger" onclick="confirmDelete(@Model.Id)">
                            <i class="fas fa-trash me-2"></i>Xóa lịch hẹn
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa lịch hẹn này? Hành động này không thể hoàn tác.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            const deleteForm = document.getElementById('deleteForm');
            deleteForm.action = '@Url.Action("Delete", "Appointments")/' + id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}

<style>
    .avatar-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-list .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
        padding: 0.5rem;
        background-color: #f8f9fc;
        border-radius: 0.375rem;
    }
</style>