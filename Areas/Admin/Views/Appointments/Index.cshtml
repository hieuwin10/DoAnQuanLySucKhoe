@model DoAnChamSocSucKhoe.Areas.Admin.Models.AppointmentListViewModel
@{
    ViewData["Title"] = "Quản lý lịch hẹn";
    Layout = "_AdminLayout";
}

<div class="container-fluid p-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-2">Quản lý lịch hẹn</h1>
            <p class="text-muted fs-5">Quản lý và theo dõi lịch hẹn khám bệnh</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-light btn-lg border shadow-sm" id="exportAppointmentButton">
                <i class="fas fa-download me-2"></i> Xuất danh sách
            </button>
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-plus-circle me-2"></i> Tạo lịch hẹn
            </a>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-calendar-check fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Tổng lịch hẹn</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.TotalAppointments</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-user-clock fa-2x text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Sắp tới</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.UpcomingAppointments</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-check-circle fa-2x text-info"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Hoàn thành</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.CompletedAppointments</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-danger bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-times-circle fa-2x text-danger"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Đã hủy</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.CanceledAppointments</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" class="form-control border-start-0 ps-0" name="searchTerm" placeholder="Tìm kiếm..." value="@Model.SearchTerm">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select form-select-lg" name="statusFilter">
                        <option value="">Tất cả trạng thái</option>
                        <option value="Upcoming" selected="@(Model.StatusFilter == "Upcoming")">Sắp tới</option>
                        <option value="Completed" selected="@(Model.StatusFilter == "Completed")">Đã hoàn thành</option>
                        <option value="Cancelled" selected="@(Model.StatusFilter == "Cancelled")">Đã hủy</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control form-control-lg" name="dateFilter" value="@Model.DateFilter?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Lọc</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Appointments Table -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th class="py-4 ps-4 border-0 rounded-top-left">Bệnh nhân</th>
                            <th class="py-4 border-0">Bác sĩ</th>
                            <th class="py-4 border-0">Thời gian</th>
                            <th class="py-4 border-0">Trạng thái</th>
                            <th class="py-4 border-0">Ghi chú</th>
                            <th class="py-4 pe-4 text-end border-0 rounded-top-right">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appt in Model.Appointments)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(appt.PatientAvatar) ? "/images/default-avatar.png" : appt.PatientAvatar)" 
                                             class="rounded-circle me-3 border" width="40" height="40" alt="Avatar">
                                        <span class="fw-bold text-dark">@appt.PatientName</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(appt.DoctorAvatar) ? "/images/default-doctor.png" : appt.DoctorAvatar)" 
                                             class="rounded-circle me-3 border" width="40" height="40" alt="Avatar">
                                        <span class="fw-bold text-dark">@appt.DoctorName</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold">@appt.DateTime.ToString("HH:mm")</span>
                                        <span class="text-muted small">@appt.DateTime.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </td>
                                <td>
                                    @if (appt.Status == "Upcoming")
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">Sắp tới</span>
                                    }
                                    else if (appt.Status == "Completed")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Hoàn thành</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">Đã hủy</span>
                                    }
                                </td>
                                <td class="text-muted">@appt.Reason</td>
                                <td class="pe-4 text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-circle shadow-sm" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow rounded-3">
                                            <li><a class="dropdown-item py-2" asp-action="Details" asp-route-id="@appt.Id"><i class="fas fa-eye me-2 text-info"></i> Chi tiết</a></li>
                                            <li><a class="dropdown-item py-2" asp-action="Edit" asp-route-id="@appt.Id"><i class="fas fa-edit me-2 text-warning"></i> Chỉnh sửa</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-action="Cancel" asp-route-id="@appt.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn hủy lịch hẹn này?');">
                                                    <button type="submit" class="dropdown-item py-2 text-danger"><i class="fas fa-times-circle me-2"></i> Hủy lịch</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-0 py-3">
            <!-- Pagination would go here -->
        </div>
    </div>
</div>

<!-- Modal thay đổi trạng thái -->
<div class="modal fade" id="changeAppointmentStatusModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thay đổi trạng thái lịch hẹn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="appointmentIdInput" value="" />
                <div class="mb-3">
                    <label class="form-label">Chọn trạng thái mới</label>
                    <select class="form-select" id="appointmentStatusSelect">
                        <option value="Sắp tới">Sắp tới</option>
                        <option value="Đã hoàn thành">Đã hoàn thành</option>
                        <option value="Đã hủy">Đã hủy</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="saveAppointmentStatusButton">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Handle change status
            $('.change-status-btn').click(function() {
                var appointmentId = $(this).data('appointment-id');
                $('#appointmentIdInput').val(appointmentId);
            });

            $('#saveAppointmentStatusButton').click(function() {
                var appointmentId = $('#appointmentIdInput').val();
                var status = $('#appointmentStatusSelect').val();

                $.ajax({
                    url: '@Url.Action("ChangeStatus")',
                    type: 'POST',
                    data: {
                        appointmentId: appointmentId,
                        status: status
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            $('#changeAppointmentStatusModal').modal('hide');
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi thay đổi trạng thái');
                    }
                });
            });
        });
    </script>
}
