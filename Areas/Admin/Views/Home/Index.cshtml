@{
    ViewData["Title"] = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body { background: #f4f6f9; }
        .sidebar {
            min-height: 100vh;
            background: #343a40;
            color: #fff;
        }
        .sidebar a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 12px 20px;
            border-radius: 4px;
            margin-bottom: 4px;
        }
        .sidebar a.active, .sidebar a:hover {
            background: #495057;
        }
        .sidebar .sidebar-title {
            font-size: 1.3rem;
            font-weight: bold;
            padding: 24px 20px 12px 20px;
        }
        .content {
            padding: 32px;
        }
        .card {
            margin-bottom: 24px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-title">Admin</div>
                <a href="#" class="active"><i class="fa fa-user-md me-2"></i>Quản lý Bác sĩ</a>
                <a href="#"><i class="fa fa-users me-2"></i>Quản lý Bệnh nhân</a>
                <a href="#"><i class="fa fa-calendar-check me-2"></i>Quản lý Lịch hẹn</a>
                <a href="#"><i class="fa fa-comments me-2"></i>Phản hồi</a>
                <a href="#"><i class="fa fa-cog me-2"></i>Cài đặt</a>
            </nav>
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4 content">
                <h1 class="mb-4">Bảng điều khiển Admin</h1>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card text-bg-primary">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fa fa-user-md"></i> Bác sĩ</h5>
                                <p class="card-text">Quản lý thông tin, thêm/xóa/sửa bác sĩ.</p>
                                <a href="#" class="btn btn-light">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-bg-success">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fa fa-users"></i> Bệnh nhân</h5>
                                <p class="card-text">Quản lý thông tin, thêm/xóa/sửa bệnh nhân.</p>
                                <a href="#" class="btn btn-light">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-bg-warning">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fa fa-calendar-check"></i> Lịch hẹn</h5>
                                <p class="card-text">Xem & duyệt lịch hẹn, quản lý trạng thái.</p>
                                <a href="#" class="btn btn-light">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card text-bg-info">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fa fa-comments"></i> Phản hồi</h5>
                                <p class="card-text">Xem và phản hồi ý kiến từ người dùng.</p>
                                <a href="#" class="btn btn-light">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card text-bg-secondary">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fa fa-cog"></i> Cài đặt</h5>
                                <p class="card-text">Cấu hình hệ thống, phân quyền, ...</p>
                                <a href="#" class="btn btn-light">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
