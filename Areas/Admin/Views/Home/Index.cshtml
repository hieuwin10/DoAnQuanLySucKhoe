@{
    ViewData["Title"] = "Tổng quan";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Welcome Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary">
                <i class="fas fa-tachometer-alt me-2"></i>Tổng quan
            </h1>
            <p class="text-muted lead mb-0">Chào mừng trở lại, Quản trị viên!</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-light shadow-sm">
                <i class="fas fa-download me-2"></i>Tải báo cáo
            </button>
            <button class="btn btn-primary shadow-sm">
                <i class="fas fa-plus me-2"></i>Thêm mới
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="flex-shrink-0 bg-primary bg-opacity-10 p-3 rounded-4">
                            <i class="fas fa-user-md fa-2x text-primary"></i>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Doctors")">Quản lý</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Create", "Doctors")">Thêm mới</a></li>
                            </ul>
                        </div>
                    </div>
                    <h5 class="text-muted text-uppercase small fw-bold mb-1">Bác sĩ</h5>
                    <div class="d-flex align-items-baseline">
                        <h2 class="mb-0 fw-bold text-dark">24</h2>
                        <span class="ms-2 text-success small fw-bold">
                            <i class="fas fa-arrow-up"></i> +12%
                        </span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="flex-shrink-0 bg-success bg-opacity-10 p-3 rounded-4">
                            <i class="fas fa-users fa-2x text-success"></i>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Patients")">Quản lý</a></li>
                            </ul>
                        </div>
                    </div>
                    <h5 class="text-muted text-uppercase small fw-bold mb-1">Bệnh nhân</h5>
                    <div class="d-flex align-items-baseline">
                        <h2 class="mb-0 fw-bold text-dark">1,250</h2>
                        <span class="ms-2 text-success small fw-bold">
                            <i class="fas fa-arrow-up"></i> +5.2%
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="flex-shrink-0 bg-warning bg-opacity-10 p-3 rounded-4">
                            <i class="fas fa-calendar-check fa-2x text-warning"></i>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Appointments")">Quản lý</a></li>
                            </ul>
                        </div>
                    </div>
                    <h5 class="text-muted text-uppercase small fw-bold mb-1">Lịch hẹn hôm nay</h5>
                    <div class="d-flex align-items-baseline">
                        <h2 class="mb-0 fw-bold text-dark">48</h2>
                        <span class="ms-2 text-danger small fw-bold">
                            <i class="fas fa-arrow-down"></i> -2.5%
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="flex-shrink-0 bg-info bg-opacity-10 p-3 rounded-4">
                            <i class="fas fa-comments fa-2x text-info"></i>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Feedbacks")">Quản lý</a></li>
                            </ul>
                        </div>
                    </div>
                    <h5 class="text-muted text-uppercase small fw-bold mb-1">Phản hồi mới</h5>
                    <div class="d-flex align-items-baseline">
                        <h2 class="mb-0 fw-bold text-dark">12</h2>
                        <span class="ms-2 text-muted small fw-bold">
                            Chưa đọc
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity & Charts -->
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary">Thống kê truy cập</h5>
                    <select class="form-select form-select-sm w-auto border-0 bg-light">
                        <option>7 ngày qua</option>
                        <option>Tháng này</option>
                        <option>Năm nay</option>
                    </select>
                </div>
                <div class="card-body">
                    <canvas id="visitorsChart" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary">Hoạt động gần đây</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item border-0 px-4 py-3">
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-user-plus text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-dark fw-bold">Bệnh nhân mới đăng ký</h6>
                                    <small class="text-muted">Nguyễn Văn A - 5 phút trước</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-4 py-3">
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-calendar-check text-success"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-dark fw-bold">Lịch hẹn hoàn thành</h6>
                                    <small class="text-muted">BS. Trần Thị B - 15 phút trước</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-4 py-3">
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-star text-warning"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-dark fw-bold">Đánh giá mới</h6>
                                    <small class="text-muted">5 sao cho BS. Lê Văn C - 1 giờ trước</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-4 py-3">
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-danger bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-exclamation-triangle text-danger"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-dark fw-bold">Báo cáo vi phạm</h6>
                                    <small class="text-muted">Spam tin nhắn - 2 giờ trước</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 text-center py-3">
                    <a href="#" class="text-decoration-none fw-bold text-primary">Xem tất cả <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dummy Chart Data
        const ctx = document.getElementById('visitorsChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'CN'],
                datasets: [{
                    label: 'Truy cập',
                    data: [65, 59, 80, 81, 56, 55, 40],
                    fill: true,
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            borderDash: [2, 2]
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    </script>
}
