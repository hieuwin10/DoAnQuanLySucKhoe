@model DoAnChamSocSucKhoe.Areas.Admin.Models.FeedbackViewModel

@{
    ViewData["Title"] = "Chi tiết phản hồi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-comment me-2"></i>Chi tiết phản hồi
            </h1>
            <p class="text-muted mb-0">Xem chi tiết phản hồi từ người dùng</p>
        </div>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
            @if (Model.Status == "Chưa xử lý")
            {
                <form method="post" action="@Url.Action("MarkAsProcessed", new { id = Model.Id })"
                      style="display: inline;"
                      onsubmit="return confirm('Bạn có chắc muốn đánh dấu phản hồi này là đã xử lý?')">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-2"></i>Đánh dấu đã xử lý
                    </button>
                </form>
            }
        </div>
    </div>

    <!-- Feedback Details -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Nội dung phản hồi</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nội dung:</label>
                        <div class="border rounded p-3 bg-light">
                            @Html.Raw(Model.Content.Replace("\n", "<br>"))
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Sender Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin người gửi</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Họ tên:</label>
                        <p class="mb-1">@Model.SenderName</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email:</label>
                        <p class="mb-1">
                            <a href="mailto:@Model.SenderEmail">@Model.SenderEmail</a>
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ngày gửi:</label>
                        <p class="mb-1">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Trạng thái:</label>
                        <p class="mb-1">
                            <span class="badge bg-@Model.StatusClass">@Model.Status</span>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thao tác</h6>
                </div>
                <div class="card-body">
                    @if (Model.Status == "Chưa xử lý")
                    {
                        <form method="post" action="@Url.Action("MarkAsProcessed", new { id = Model.Id })"
                              class="mb-3"
                              onsubmit="return confirm('Bạn có chắc muốn đánh dấu phản hồi này là đã xử lý?')">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-check me-2"></i>Đánh dấu đã xử lý
                            </button>
                        </form>
                    }

                    <form method="post" action="@Url.Action("Delete", new { id = Model.Id })"
                          onsubmit="return confirm('Bạn có chắc muốn xóa phản hồi này? Thao tác này không thể hoàn tác.')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-trash me-2"></i>Xóa phản hồi
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>