<!-- Thống kê theo chuyên khoa -->
<div class="row g-4 mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm animate-fade-in-up">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Thống kê theo chuyên khoa</h5>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-light action-btn-modern dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-sort me-1"></i> Sắp xếp theo
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Số lượng bác sĩ</a></li>
                            <li><a class="dropdown-item" href="#">Số lượng lịch hẹn</a></li>
                            <li><a class="dropdown-item" href="#">Doanh thu</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-modern mb-0">
                        <thead>
                            <tr>
                                <th><i class="fas fa-stethoscope me-2"></i>Chuyên khoa</th>
                                <th><i class="fas fa-user-md me-2"></i>Số bác sĩ</th>
                                <th><i class="fas fa-calendar-check me-2"></i>Số lịch hẹn</th>
                                <th><i class="fas fa-dollar-sign me-2"></i>Doanh thu</th>
                                <th class="text-center"><i class="fas fa-chart-bar me-2"></i>Tỷ lệ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var specialty in Model.SpecialtyStats)
                            {
                                <tr class="table-row-modern">
                                    <td class="fw-semibold">@specialty.SpecialtyName</td>
                                    <td>
                                        <span class="badge bg-light text-dark px-3 py-2">@specialty.TotalDoctors</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">
                                            @specialty.TotalAppointments
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-success fw-semibold">@specialty.Revenue.ToString("N0") đ</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center justify-content-center gap-2">
                                            <div class="progress flex-grow-1" style="height: 8px; max-width: 100px;">
                                                <div class="progress-bar bg-gradient" role="progressbar" 
                                                     style="width: @((specialty.TotalAppointments * 100.0 / Model.TotalAppointments).ToString("0.0"))%; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);">
                                                </div>
                                            </div>
                                            <small class="text-muted fw-semibold">
                                                @((specialty.TotalAppointments * 100.0 / Model.TotalAppointments).ToString("0.0"))%
                                            </small>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

