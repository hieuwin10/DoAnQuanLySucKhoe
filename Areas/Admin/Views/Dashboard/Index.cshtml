                                    </td>
                                    <td>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <a href="#" class="action-btn-modern btn-sm" data-bs-toggle="tooltip" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="#" class="action-btn-modern btn-sm" data-bs-toggle="tooltip" title="Xác nhận">
                                                <i class="fas fa-check"></i>
                                            </a>
                                            <a href="#" class="action-btn-modern btn-sm" data-bs-toggle="tooltip" title="Hủy">
                                                <i class="fas fa-times"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Appointments Chart
        var appointmentsCtx = document.getElementById('appointmentsChart').getContext('2d');
        var appointmentsChart = new Chart(appointmentsCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.DailyStats.Select(d => d.Date.ToString("dd/MM")))),
                datasets: [{
                    label: 'Lịch hẹn mới',
                    data: @Html.Raw(Json.Serialize(Model.DailyStats.Select(d => d.NewAppointments))),
                    backgroundColor: 'rgba(44, 123, 229, 0.2)',
                    borderColor: 'rgba(44, 123, 229, 1)',
                    borderWidth: 2,
                    tension: 0.3
                }, {
                    label: 'Lịch hẹn hoàn thành',
                    data: @Html.Raw(Json.Serialize(Model.DailyStats.Select(d => d.CompletedAppointments))),
                    backgroundColor: 'rgba(0, 217, 126, 0.2)',
                    borderColor: 'rgba(0, 217, 126, 1)',
                    borderWidth: 2,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                aspectRatio: 2,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Appointment Status Chart
        var statusCtx = document.getElementById('appointmentStatusChart').getContext('2d');
        var statusChart = new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Đã xác nhận', 'Đang chờ', 'Đã hủy', 'Đã hoàn thành'],
                datasets: [{
                    data: [
                        @Model.AppointmentStatusStats.Confirmed,
                        @Model.AppointmentStatusStats.Pending,
                        @Model.AppointmentStatusStats.Cancelled,
                        @Model.AppointmentStatusStats.Completed
                    ],
                    backgroundColor: [
                        'rgba(0, 217, 126, 0.8)',
                        'rgba(246, 195, 67, 0.8)',
                        'rgba(230, 55, 87, 0.8)',
                        'rgba(44, 123, 229, 0.8)'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                aspectRatio: 1,
                plugins: {
                    legend: {
                        position: 'right',
                    }
                }
            }
        });
    </script>
}