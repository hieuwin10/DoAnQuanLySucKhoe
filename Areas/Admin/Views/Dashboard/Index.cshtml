                    <div class="stat-number">@Model.TotalAppointments</div>
                    <div class="growth-badge bg-success bg-opacity-10 text-success mt-2">
                        <i class="fas fa-arrow-up"></i>
                        @Model.AppointmentGrowthRate.ToString("0.0")%
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

