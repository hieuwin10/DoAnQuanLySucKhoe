                    <div class="growth-badge bg-success bg-opacity-10 text-success mt-2">
                        <i class="fas fa-arrow-up"></i>
                        @Model.UserGrowthRate.ToString("0.0")%
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon icon-success me-3">
                    <i class="fas fa-user-md text-white"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1 small">Tổng bác sĩ</h6>
                    <div class="stat-number">@Model.TotalDoctors</div>
                    <div class="growth-badge bg-success bg-opacity-10 text-success mt-2">
                        <i class="fas fa-arrow-up"></i>
                        @Model.DoctorGrowthRate.ToString("0.0")%
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon icon-info me-3">
                    <i class="fas fa-procedures text-white"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1 small">Tổng bệnh nhân</h6>
                    <div class="stat-number">@Model.TotalPatients</div>
                    <div class="growth-badge bg-success bg-opacity-10 text-success mt-2">
                        <i class="fas fa-arrow-up"></i>
                        @Model.PatientGrowthRate.ToString("0.0")%
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon icon-warning me-3">
                    <i class="fas fa-calendar-alt text-white"></i>
                </div>
                <div class="flex-grow-1">
