@model DoAnChamSocSucKhoe.Areas.Admin.Models.FeedbackListViewModel
@{
    ViewData["Title"] = "Quản lý phản hồi";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary">
                <i class="fas fa-comments me-2"></i>Quản lý phản hồi
            </h1>
            <p class="text-muted lead mb-0">Xem và phản hồi ý kiến đóng góp từ người dùng</p>
        </div>
        <div>
            <a href="#" class="btn btn-outline-primary shadow-sm rounded-pill" id="exportFeedbackButton">
                <i class="fas fa-download me-2"></i>Xuất danh sách
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm rounded-3 border-0 border-start border-danger border-5" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["ErrorMessage"]
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm rounded-3 border-0 border-start border-success border-5" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search & Filter -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <form id="searchFeedbackForm" asp-action="Index" method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold text-muted small text-uppercase">Tìm kiếm</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0 text-muted">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control bg-light border-0" placeholder="Tìm theo tên, email, nội dung..." 
                               name="searchTerm" value="@Model.SearchTerm">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small text-uppercase">Trạng thái</label>
                    <select class="form-select bg-light border-0" name="statusFilter" onchange="document.getElementById('searchFeedbackForm').submit()">
                        <option value="all" selected="@(Model.StatusFilter == "all")">Tất cả trạng thái</option>
                        <option value="unread" selected="@(Model.StatusFilter == "unread")">Chưa đọc</option>
                        <option value="read" selected="@(Model.StatusFilter == "read")">Đã đọc</option>
                        <option value="replied" selected="@(Model.StatusFilter == "replied")">Đã phản hồi</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <div class="d-grid gap-2 d-md-flex w-100">
                        <button type="submit" class="btn btn-primary flex-grow-1 rounded-3">
                            <i class="fas fa-filter me-1"></i> Lọc
                        </button>
                        <a asp-action="Index" class="btn btn-light flex-grow-1 rounded-3 text-muted">
                            <i class="fas fa-redo-alt me-1"></i> Đặt lại
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Feedback List -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white py-3 border-0 d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold text-primary">
                <i class="fas fa-list me-2"></i>Danh sách phản hồi
            </h5>
            <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3">
                Tổng: @(Model.TotalPages * Model.PageSize)
            </span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0 py-3 ps-4 rounded-start">Người gửi</th>
                            <th class="border-0 py-3">Nội dung</th>
                            <th class="border-0 py-3">Ngày gửi</th>
                            <th class="border-0 py-3">Trạng thái</th>
                            <th class="border-0 py-3 pe-4 rounded-end text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Feedbacks != null && Model.Feedbacks.Any())
                        {
                            foreach (var fb in Model.Feedbacks)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                <span class="text-info fw-bold">@fb.SenderName.Substring(0, 1).ToUpper()</span>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold text-dark">@fb.SenderName</h6>
                                                <small class="text-muted">@fb.SenderEmail</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 300px;" title="@fb.Content">
                                            @fb.Content
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center text-muted">
                                            <i class="far fa-clock me-2"></i>
                                            @fb.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = fb.StatusClass == "success" ? "bg-success" : 
                                                            (fb.StatusClass == "warning" ? "bg-warning" : "bg-secondary");
                                            var statusIcon = fb.StatusClass == "success" ? "fa-check-circle" : 
                                                            (fb.StatusClass == "warning" ? "fa-envelope" : "fa-circle");
                                        }
                                        <span class="badge @statusClass bg-opacity-10 text-@fb.StatusClass.Replace("bg-", "") rounded-pill px-3 py-2">
                                            <i class="fas @statusIcon me-1"></i> @fb.Status
                                        </span>
                                    </td>
                                    <td class="pe-4 text-end">
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", new { id = fb.Id })" 
                                               class="btn btn-light btn-sm text-primary" 
                                               data-bs-toggle="tooltip" 
                                               title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-light btn-sm text-success reply-feedback-btn" 
                                                    data-feedback-id="@fb.Id" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#replyFeedbackModal"
                                                    title="Phản hồi">
                                                <i class="fas fa-reply"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="d-flex flex-column align-items-center">
                                        <div class="bg-light rounded-circle p-4 mb-3">
                                            <i class="fas fa-inbox fa-3x text-muted"></i>
                                        </div>
                                        <h5 class="text-muted">Không tìm thấy phản hồi nào</h5>
                                        <p class="text-muted small mb-0">Hãy thử thay đổi bộ lọc hoặc tìm kiếm lại</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white border-0 py-3">
                <nav aria-label="Pagination">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link border-0 rounded-circle mx-1 d-flex align-items-center justify-content-center" 
                               style="width: 36px; height: 36px;"
                               asp-action="Index" 
                               asp-route-pageNumber="@(Model.PageNumber - 1)" 
                               asp-route-searchTerm="@Model.SearchTerm" 
                               asp-route-statusFilter="@Model.StatusFilter">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                <a class="page-link border-0 rounded-circle mx-1 d-flex align-items-center justify-content-center" 
                                   style="width: 36px; height: 36px;"
                                   asp-action="Index" 
                                   asp-route-pageNumber="@i" 
                                   asp-route-searchTerm="@Model.SearchTerm" 
                                   asp-route-statusFilter="@Model.StatusFilter">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link border-0 rounded-circle mx-1 d-flex align-items-center justify-content-center" 
                               style="width: 36px; height: 36px;"
                               asp-action="Index" 
                               asp-route-pageNumber="@(Model.PageNumber + 1)" 
                               asp-route-searchTerm="@Model.SearchTerm" 
                               asp-route-statusFilter="@Model.StatusFilter">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<!-- Reply Modal -->
<div class="modal fade" id="replyFeedbackModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold text-primary">
                    <i class="fas fa-reply me-2"></i>Phản hồi ý kiến
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-4">
                <input type="hidden" id="feedbackIdInput" value="" />
                <div class="mb-3">
                    <label class="form-label fw-bold text-muted small text-uppercase">Nội dung phản hồi</label>
                    <textarea class="form-control bg-light border-0 rounded-3" id="replyContentInput" rows="5" placeholder="Nhập nội dung phản hồi của bạn..."></textarea>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0 pb-4">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary rounded-pill px-4" id="sendReplyButton">
                    <i class="fas fa-paper-plane me-2"></i>Gửi phản hồi
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Handle reply feedback
            $('.reply-feedback-btn').click(function() {
                var feedbackId = $(this).data('feedback-id');
                $('#feedbackIdInput').val(feedbackId);
                $('#replyContentInput').val('');
            });

            $('#sendReplyButton').click(function() {
                var feedbackId = $('#feedbackIdInput').val();
                var replyContent = $('#replyContentInput').val();
                if (!replyContent.trim()) {
                    alert('Vui lòng nhập nội dung phản hồi!');
                    return;
                }
                
                // Show loading state
                var $btn = $(this);
                var originalText = $btn.html();
                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang gửi...');

                $.ajax({
                    url: '@Url.Action("Reply")',
                    type: 'POST',
                    data: {
                        feedbackId: feedbackId,
                        replyContent: replyContent
                    },
                    success: function(response) {
                        if (response.success) {
                            $('#replyFeedbackModal').modal('hide');
                            location.reload();
                        } else {
                            alert(response.message);
                            $btn.prop('disabled', false).html(originalText);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi gửi phản hồi');
                        $btn.prop('disabled', false).html(originalText);
                    }
                });
            });
        });
    </script>
}
