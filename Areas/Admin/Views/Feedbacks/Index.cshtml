@model DoAnChamSocSucKhoe.Areas.Admin.Models.FeedbackListViewModel
@{
    ViewData["Title"] = "Quản lý phản hồi";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Quản lý phản hồi</h1>
    <div>
        <a href="#" class="btn btn-outline-secondary me-2" id="exportFeedbackButton">
            <i class="fas fa-download me-1"></i> Xuất danh sách
        </a>
    </div>
</div>

<!-- Thông báo lỗi/thành công -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Thanh tìm kiếm và lọc -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form id="searchFeedbackForm" asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-transparent">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm theo tên, email, nội dung..." 
                           name="searchTerm" value="@Model.SearchTerm">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" name="statusFilter" onchange="document.getElementById('searchFeedbackForm').submit()">
                    <option value="all" selected="@(Model.StatusFilter == "all")">Tất cả trạng thái</option>
                    <option value="unread" selected="@(Model.StatusFilter == "unread")">Chưa đọc</option>
                    <option value="read" selected="@(Model.StatusFilter == "read")">Đã đọc</option>
                    <option value="replied" selected="@(Model.StatusFilter == "replied")">Đã phản hồi</option>
                </select>
            </div>
            <div class="col-md-3 text-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search me-1"></i> Tìm kiếm
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-redo-alt me-1"></i> Làm mới
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Danh sách phản hồi -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Danh sách phản hồi</h5>
        <span class="text-muted small">Hiển thị @((Model.PageNumber-1)*Model.PageSize + 1) đến @(Math.Min(Model.PageNumber*Model.PageSize, Model.TotalPages*Model.PageSize)) trong tổng số @(Model.TotalPages*Model.PageSize) phản hồi</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Người gửi</th>
                        <th scope="col">Email</th>
                        <th scope="col">Nội dung</th>
                        <th scope="col">Ngày gửi</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Feedbacks != null && Model.Feedbacks.Any())
                    {
                        foreach (var fb in Model.Feedbacks)
                        {
                            <tr>
                                <td>@fb.SenderName</td>
                                <td>@fb.SenderEmail</td>
                                <td>@fb.Content</td>
                                <td>@fb.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><span class="badge bg-@fb.StatusClass">@fb.Status</span></td>
                                <td>
                                    <div class="d-flex">
                                        <a href="@Url.Action("Details", new { id = fb.Id })" class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="tooltip" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-success me-1 reply-feedback-btn" 
                                                data-feedback-id="@fb.Id" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#replyFeedbackModal"
                                                title="Phản hồi">
                                            <i class="fas fa-reply"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="fas fa-comment-dots fa-3x text-muted mb-3"></i>
                                    <h5>Không tìm thấy phản hồi nào</h5>
                                    <p class="text-muted">Hãy thử tìm kiếm với từ khóa khác hoặc xóa bộ lọc</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-transparent border-0">
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Pagination">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-statusFilter="@Model.StatusFilter">Trước</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchTerm="@Model.SearchTerm" asp-route-statusFilter="@Model.StatusFilter">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-statusFilter="@Model.StatusFilter">Tiếp</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<!-- Modal phản hồi -->
<div class="modal fade" id="replyFeedbackModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Phản hồi ý kiến người dùng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="feedbackIdInput" value="" />
                <div class="mb-3">
                    <label class="form-label">Nội dung phản hồi</label>
                    <textarea class="form-control" id="replyContentInput" rows="4" placeholder="Nhập nội dung phản hồi..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="sendReplyButton">Gửi phản hồi</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Handle reply feedback
            $('.reply-feedback-btn').click(function() {
                var feedbackId = $(this).data('feedback-id');
                $('#feedbackIdInput').val(feedbackId);
                $('#replyContentInput').val('');
            });

            $('#sendReplyButton').click(function() {
                var feedbackId = $('#feedbackIdInput').val();
                var replyContent = $('#replyContentInput').val();
                if (!replyContent.trim()) {
                    alert('Vui lòng nhập nội dung phản hồi!');
                    return;
                }
                $.ajax({
                    url: '@Url.Action("Reply")',
                    type: 'POST',
                    data: {
                        feedbackId: feedbackId,
                        replyContent: replyContent
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            $('#replyFeedbackModal').modal('hide');
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi gửi phản hồi');
                    }
                });
            });
        });
    </script>
}
