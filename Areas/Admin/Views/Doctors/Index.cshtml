@model DoAnChamSocSucKhoe.Areas.Admin.Models.DoctorListViewModel
@{
    ViewData["Title"] = "Quản lý bác sĩ";
    Layout = "_AdminLayout";
}

<div class="container-fluid p-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-2">Quản lý bác sĩ</h1>
            <p class="text-muted fs-5">Quản lý thông tin và lịch làm việc của bác sĩ</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-light btn-lg border shadow-sm" id="exportDoctorButton">
                <i class="fas fa-download me-2"></i> Xuất danh sách
            </button>
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-user-md me-2"></i> Thêm bác sĩ
            </a>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-user-md fa-2x text-info"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Tổng số bác sĩ</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.TotalDoctors</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-calendar-check fa-2x text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Lịch hẹn hôm nay</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.AppointmentsToday</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-star fa-2x text-warning"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Đánh giá trung bình</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.AverageRating.ToString("0.0") <small class="text-muted fs-6">/ 5.0</small></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" class="form-control border-start-0 ps-0" name="searchTerm" placeholder="Tìm kiếm bác sĩ..." value="@Model.SearchTerm">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select form-select-lg" name="specialtyFilter">
                        <option value="">Tất cả chuyên khoa</option>
                        @foreach (var specialty in Model.Specialties)
                        {
                            <option value="@specialty" selected="@(specialty == Model.SpecialtyFilter)">@specialty</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select form-select-lg" name="statusFilter">
                        <option value="">Tất cả trạng thái</option>
                        <option value="Available" selected="@(Model.StatusFilter == "Available")">Đang làm việc</option>
                        <option value="Busy" selected="@(Model.StatusFilter == "Busy")">Đang bận</option>
                        <option value="Off" selected="@(Model.StatusFilter == "Off")">Nghỉ phép</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Lọc</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Doctors Grid -->
    <div class="row g-4">
        @foreach (var doctor in Model.Doctors)
        {
            <div class="col-md-6 col-xl-4">
                <div class="card border-0 shadow-sm rounded-4 h-100 hover-shadow transition-all">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-4">
                            <div class="position-relative">
                                <img src="@(string.IsNullOrEmpty(doctor.AvatarUrl) ? "/images/default-doctor.png" : doctor.AvatarUrl)" 
                                     class="rounded-circle border" width="80" height="80" alt="Doctor Avatar" style="object-fit: cover;">
                                <span class="position-absolute bottom-0 end-0 p-2 bg-success border border-light rounded-circle">
                                    <span class="visually-hidden">Online</span>
                                </span>
                            </div>
                            <div class="ms-3">
                                <h5 class="fw-bold text-dark mb-1 fs-4">@doctor.FullName</h5>
                                <p class="text-muted mb-1 fs-5">@doctor.Specialty</p>
                                <div class="d-flex align-items-center">
                                    <div class="text-warning me-2">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < Math.Floor(doctor.Rating))
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    </div>
                                    <span class="text-muted small">(@doctor.ReviewCount đánh giá)</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mb-4 p-3 bg-light rounded-3">
                            <div class="text-center">
                                <small class="text-muted d-block mb-1">Kinh nghiệm</small>
                                <span class="fw-bold text-dark">@doctor.YearsOfExperience năm</span>
                            </div>
                            <div class="vr"></div>
                            <div class="text-center">
                                <small class="text-muted d-block mb-1">Bệnh nhân</small>
                                <span class="fw-bold text-dark">@doctor.TotalPatients+</span>
                            </div>
                            <div class="vr"></div>
                            <div class="text-center">
                                <small class="text-muted d-block mb-1">Trạng thái</small>
                                @if (doctor.IsAvailable)
                                {
                                    <span class="text-success fw-bold">Sẵn sàng</span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold">Bận</span>
                                }
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-outline-primary rounded-pill">
                                Xem hồ sơ
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="Schedule" asp-route-id="@doctor.Id" class="btn btn-light flex-grow-1 rounded-pill">
                                    <i class="fas fa-calendar-alt me-2"></i> Lịch
                                </a>
                                <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-light flex-grow-1 rounded-pill">
                                    <i class="fas fa-edit me-2"></i> Sửa
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Pagination -->
    <div class="d-flex justify-content-center mt-5">
        <!-- Pagination logic would go here -->
    </div>
</div>
