@model DoAnChamSocSucKhoe.Areas.Admin.Models.PatientListViewModel
@{
    ViewData["Title"] = "Quản lý bệnh nhân";
    Layout = "_AdminLayout";
}

<div class="container-fluid p-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-2">Quản lý bệnh nhân</h1>
            <p class="text-muted fs-5">Quản lý thông tin sức khỏe và hồ sơ bệnh án</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-light btn-lg border shadow-sm" id="exportButton">
                <i class="fas fa-download me-2"></i> Xuất danh sách
            </button>
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-plus-circle me-2"></i> Thêm mới
            </a>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-procedures fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Tổng bệnh nhân</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.TotalPatients</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-user-plus fa-2x text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Bệnh nhân mới</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.NewPatients</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="fas fa-file-medical-alt fa-2x text-warning"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Có hồ sơ sức khỏe</h6>
                        <h2 class="mb-0 fw-bold">@Model.Stats.PatientsWithRecords</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" class="form-control border-start-0 ps-0" name="searchTerm" placeholder="Tìm kiếm theo tên, email, số điện thoại..." value="@Model.SearchTerm">
                    </div>
                </div>
                <div class="col-md-4">
                    <select class="form-select form-select-lg" name="statusFilter">
                        <option value="">Tất cả trạng thái</option>
                        <option value="Active" selected="@(Model.StatusFilter == "Active")">Hoạt động</option>
                        <option value="Inactive" selected="@(Model.StatusFilter == "Inactive")">Ngừng hoạt động</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Lọc</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Patients Table -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th class="py-4 ps-4 border-0 rounded-top-left">Bệnh nhân</th>
                            <th class="py-4 border-0">Liên hệ</th>
                            <th class="py-4 border-0">Ngày sinh</th>
                            <th class="py-4 border-0">Trạng thái</th>
                            <th class="py-4 pe-4 text-end border-0 rounded-top-right">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model.Patients)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(patient.AvatarUrl) ? "/images/default-avatar.png" : patient.AvatarUrl)" 
                                             class="rounded-circle me-3 border" width="50" height="50" alt="Avatar">
                                        <div>
                                            <h6 class="mb-0 fw-bold text-dark fs-5">@patient.FullName</h6>
                                            <small class="text-muted">Mã BN: @patient.PatientCode</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="mb-1"><i class="fas fa-envelope me-2 text-muted"></i>@patient.Email</span>
                                        <span><i class="fas fa-phone me-2 text-muted"></i>@patient.PhoneNumber</span>
                                    </div>
                                </td>
                                <td>@patient.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (patient.IsActive)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill fs-6">
                                            <i class="fas fa-check-circle me-1"></i> Hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill fs-6">
                                            <i class="fas fa-ban me-1"></i> Ngừng hoạt động
                                        </span>
                                    }
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-circle shadow-sm" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow rounded-3">
                                            <li><a class="dropdown-item py-2" asp-action="Details" asp-route-id="@patient.Id"><i class="fas fa-eye me-2 text-info"></i> Chi tiết</a></li>
                                            <li><a class="dropdown-item py-2" asp-action="HealthRecord" asp-route-id="@patient.Id"><i class="fas fa-file-medical me-2 text-success"></i> Hồ sơ sức khỏe</a></li>
                                            <li><a class="dropdown-item py-2" asp-action="Edit" asp-route-id="@patient.Id"><i class="fas fa-edit me-2 text-warning"></i> Chỉnh sửa</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-action="Delete" asp-route-id="@patient.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa bệnh nhân này?');">
                                                    <button type="submit" class="dropdown-item py-2 text-danger"><i class="fas fa-trash-alt me-2"></i> Xóa</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-0 py-3">
            <!-- Pagination would go here -->
        </div>
    </div>
</div>
