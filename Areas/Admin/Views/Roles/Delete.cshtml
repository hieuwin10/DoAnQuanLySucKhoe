@model DoAnChamSocSucKhoe.Areas.Admin.Models.RoleViewModel

@{
    ViewData["Title"] = "Xóa vai trò";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-trash me-2"></i>Xóa vai trò
            </h1>
            <p class="text-muted mb-0">Xác nhận xóa vai trò khỏi hệ thống</p>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
        </a>
    </div>

    <!-- Delete Confirmation -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header py-3 bg-danger text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-exclamation-triangle me-2"></i>Cảnh báo: Hành động không thể hoàn tác
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5><i class="fas fa-exclamation-circle me-2"></i>Bạn có chắc chắn muốn xóa vai trò này?</h5>
                        <p class="mb-0">Hành động này sẽ xóa vai trò khỏi hệ thống và không thể hoàn tác.</p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">Thông tin vai trò sẽ bị xóa:</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">ID vai trò:</dt>
                                <dd class="col-sm-9">@Model.VaiTroId</dd>

                                <dt class="col-sm-3">Tên vai trò:</dt>
                                <dd class="col-sm-9">@Model.TenVaiTro</dd>

                                <dt class="col-sm-3">Mô tả:</dt>
                                <dd class="col-sm-9">@Model.MoTa</dd>

                                <dt class="col-sm-3">Số người dùng:</dt>
                                <dd class="col-sm-9">@Model.UserCount người dùng</dd>

                                <dt class="col-sm-3">Ngày tạo:</dt>
                                <dd class="col-sm-9">@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.UserCount > 0)
                    {
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-exclamation-triangle me-2"></i>Lưu ý quan trọng:</h6>
                            <p class="mb-0">
                                Vai trò này hiện tại có <strong>@Model.UserCount người dùng</strong>.
                                Việc xóa vai trò sẽ ảnh hưởng đến các người dùng này.
                                Hãy cân nhắc chuyển họ sang vai trò khác trước khi xóa.
                            </p>
                        </div>
                    }

                    <form method="post" asp-action="Delete">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.VaiTroId" />

                        <div class="d-flex justify-content-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                                <i class="fas fa-times me-1"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>