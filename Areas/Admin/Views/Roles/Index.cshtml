@model IEnumerable<DoAnChamSocSucKhoe.Areas.Admin.Models.RoleViewModel>

@{
    ViewData["Title"] = "Quản lý vai trò";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary">
                <i class="fas fa-user-tag me-2"></i>Quản lý vai trò
            </h1>
            <p class="text-muted lead mb-0">Quản lý phân quyền và vai trò trong hệ thống</p>
        </div>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-lg shadow-sm rounded-pill">
            <i class="fas fa-plus me-2"></i>Thêm vai trò mới
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-primary bg-opacity-10 p-3 rounded-4">
                            <i class="fas fa-user-tag fa-2x text-primary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small text-uppercase fw-bold mb-1">Tổng vai trò</div>
                            <div class="h2 mb-0 fw-bold text-dark">@Model.Count()</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-success bg-opacity-10 p-3 rounded-4">
                            <i class="fas fa-users fa-2x text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small text-uppercase fw-bold mb-1">Tổng người dùng</div>
                            <div class="h2 mb-0 fw-bold text-dark">@Model.Sum(r => r.UserCount)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Roles Table -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white py-3 border-0 d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold text-primary">
                <i class="fas fa-list me-2"></i>Danh sách vai trò
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0 py-3 ps-4 rounded-start">Tên vai trò</th>
                            <th class="border-0 py-3">Mô tả</th>
                            <th class="border-0 py-3">Số người dùng</th>
                            <th class="border-0 py-3">Ngày tạo</th>
                            <th class="border-0 py-3 pe-4 rounded-end text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fas fa-shield-alt text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold text-dark">@role.TenVaiTro</h6>
                                            <small class="text-muted">ID: @role.VaiTroId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@role.MoTa</td>
                                <td>
                                    <span class="badge bg-info bg-opacity-10 text-info rounded-pill px-3 py-2">
                                        <i class="fas fa-users me-1"></i> @role.UserCount người dùng
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="far fa-calendar-alt me-2"></i>
                                        @role.NgayTao.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group">
                                        <a href="@Url.Action("Details", new { id = role.VaiTroId })" 
                                           class="btn btn-light btn-sm text-primary" 
                                           data-bs-toggle="tooltip" 
                                           title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = role.VaiTroId })" 
                                           class="btn btn-light btn-sm text-warning" 
                                           data-bs-toggle="tooltip" 
                                           title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-light btn-sm text-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal-@role.VaiTroId"
                                                title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal-@role.VaiTroId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content border-0 shadow">
                                                <div class="modal-header border-0 pb-0">
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body text-center pb-4">
                                                    <div class="text-danger mb-3">
                                                        <i class="fas fa-exclamation-circle fa-4x"></i>
                                                    </div>
                                                    <h4 class="mb-2">Xác nhận xóa?</h4>
                                                    <p class="text-muted mb-4">Bạn có chắc chắn muốn xóa vai trò <strong>@role.TenVaiTro</strong>? Hành động này không thể hoàn tác.</p>
                                                    <form method="post" action="@Url.Action("Delete", new { id = role.VaiTroId })" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Hủy bỏ</button>
                                                        <button type="submit" class="btn btn-danger">Xóa vai trò</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json"
                },
                "order": [[ 0, "asc" ]],
                "columnDefs": [
                    { "orderable": false, "targets": 4 }
                ]
            });
            
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
}