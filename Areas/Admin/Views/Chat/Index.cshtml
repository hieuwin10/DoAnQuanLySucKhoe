@model IEnumerable<DoAnChamSocSucKhoe.Models.TuVanSucKhoe>
@{
    ViewData["Title"] = "Quản lý cuộc trò chuyện";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary">
                <i class="fas fa-comments me-2"></i>Quản lý cuộc trò chuyện
            </h1>
            <p class="text-muted lead mb-0">Giám sát và quản lý các phiên tư vấn</p>
        </div>
        <a href="@Url.Action("Reports", "Chat")" class="btn btn-primary btn-lg shadow-sm rounded-pill">
            <i class="fas fa-chart-bar me-2"></i>Báo cáo thống kê
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-primary bg-opacity-10 p-3 rounded-4">
                            <i class="fas fa-comments fa-2x text-primary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small text-uppercase fw-bold mb-1">Tổng cuộc trò chuyện</div>
                            <div class="h2 mb-0 fw-bold text-dark">@Model.Count()</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-success bg-opacity-10 p-3 rounded-4">
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small text-uppercase fw-bold mb-1">Đã hoàn thành</div>
                            <div class="h2 mb-0 fw-bold text-dark">@Model.Count(c => c.TrangThai == "HoanThanh")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chat List -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white py-3 border-0 d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold text-primary">
                <i class="fas fa-list me-2"></i>Danh sách cuộc trò chuyện
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0 py-3 ps-4 rounded-start">ID</th>
                            <th class="border-0 py-3">Bệnh nhân</th>
                            <th class="border-0 py-3">Bác sĩ</th>
                            <th class="border-0 py-3">Tiêu đề</th>
                            <th class="border-0 py-3">Tin nhắn</th>
                            <th class="border-0 py-3 pe-4 rounded-end text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var consultation in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-muted">#@consultation.TuVanSucKhoeId</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                            <i class="fas fa-user text-info"></i>
                                        </div>
                                        <span class="fw-bold text-dark">@consultation.NguoiDung?.HoTen</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                            <i class="fas fa-user-md text-success"></i>
                                        </div>
                                        <span class="fw-bold text-dark">@consultation.ChuyenGia?.HoTen</span>
                                    </div>
                                </td>
                                <td>@consultation.TieuDe</td>
                                <td>
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3">
                                        <i class="fas fa-comment-dots me-1"></i> @(consultation.Messages?.Count ?? 0)
                                    </span>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group">
                                        <a href="@Url.Action("Details", "Chat", new { id = consultation.TuVanSucKhoeId })" 
                                           class="btn btn-light btn-sm text-primary" 
                                           data-bs-toggle="tooltip" 
                                           title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-light btn-sm text-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal-@consultation.TuVanSucKhoeId"
                                                title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal-@consultation.TuVanSucKhoeId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content border-0 shadow">
                                                <div class="modal-header border-0 pb-0">
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body text-center pb-4">
                                                    <div class="text-danger mb-3">
                                                        <i class="fas fa-exclamation-circle fa-4x"></i>
                                                    </div>
                                                    <h4 class="mb-2">Xác nhận xóa?</h4>
                                                    <p class="text-muted mb-4">Bạn có chắc chắn muốn xóa cuộc trò chuyện này? Hành động này không thể hoàn tác.</p>
                                                    <form method="post" action="@Url.Action("DeleteConversation", "Chat", new { id = consultation.TuVanSucKhoeId })" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Hủy bỏ</button>
                                                        <button type="submit" class="btn btn-danger">Xóa cuộc trò chuyện</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json"
                },
                "order": [[ 0, "desc" ]],
                "columnDefs": [
                    { "orderable": false, "targets": 5 }
                ]
            });
            
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
}