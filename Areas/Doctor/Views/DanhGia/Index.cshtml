@model IEnumerable<DoAnChamSocSucKhoe.Models.DanhGiaChuyenGia>

@{
    ViewData["Title"] = "Đánh giá của bệnh nhân";
    Layout = "~/Areas/Doctor/Views/Shared/_DoctorLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Đánh giá của bệnh nhân</h1>
        <div class="card bg-primary text-white shadow">
            <div class="card-body py-2 px-3">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">
                            Điểm trung bình
                        </div>
                        <div class="h5 mb-0 font-weight-bold">
                            @(Model.Any() ? Model.Average(x => x.SoSao ?? 0).ToString("0.0") : "0.0") / 5.0
                            <small class="ml-1"><i class="fas fa-star text-warning"></i></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách đánh giá</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Bệnh nhân</th>
                            <th>Số sao</th>
                            <th>Bình luận</th>
                            <th>Tư vấn liên quan</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-info text-white mr-2">
                                                @(item.NguoiDung?.HoTen?.Substring(0, 1) ?? "?")
                                            </div>
                                            <div>
                                                <div class="font-weight-bold">@item.NguoiDung?.HoTen</div>
                                                <div class="small text-muted">@item.NguoiDung?.Email</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= (item.SoSao ?? 0))
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 300px;">
                                            @(string.IsNullOrEmpty(item.BinhLuan) ? "Không có bình luận" : item.BinhLuan)
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.TuVanSucKhoe != null)
                                        {
                                            <a asp-controller="Chat" asp-action="Details" asp-route-id="@item.TuVanSucKhoeId">
                                                @item.TuVanSucKhoe.TieuDe
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không xác định</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">Chưa có đánh giá nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
