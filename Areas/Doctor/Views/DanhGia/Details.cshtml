@model DoAnChamSocSucKhoe.Models.DanhGiaChuyenGia

@{
    ViewData["Title"] = "Chi tiết đánh giá";
    Layout = "~/Areas/Doctor/Views/Shared/_DoctorLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Chi tiết đánh giá #@Model.Id</h6>
            <div class="text-warning h5 mb-0">
                <span class="mr-2 font-weight-bold text-dark h6">@Model.SoSao / 5</span>
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= (Model.SoSao ?? 0))
                    {
                        <i class="fas fa-star"></i>
                    }
                    else
                    {
                        <i class="far fa-star"></i>
                    }
                }
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="font-weight-bold text-gray-800 mb-3">Thông tin bệnh nhân</h5>
                    <div class="d-flex align-items-center mb-4">
                        <div class="avatar-circle-lg bg-info text-white mr-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; border-radius: 50%; font-size: 24px;">
                            @(Model.NguoiDung?.HoTen?.Substring(0, 1) ?? "?")
                        </div>
                        <div>
                            <h4 class="h5 mb-1">@Model.NguoiDung?.HoTen</h4>
                            <p class="text-muted mb-0">@Model.NguoiDung?.Email</p>
                            <p class="text-muted mb-0">@Model.NguoiDung?.PhoneNumber</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <h5 class="font-weight-bold text-gray-800 mb-3">Nội dung đánh giá</h5>
                    <div class="p-3 bg-light rounded border">
                        <p class="mb-0" style="font-size: 1.1rem; line-height: 1.6;">
                            <i class="fas fa-quote-left text-primary opacity-25 mr-2"></i>
                            @(string.IsNullOrEmpty(Model.BinhLuan) ? "Người dùng không để lại bình luận chi tiết." : Model.BinhLuan)
                            <i class="fas fa-quote-right text-primary opacity-25 ml-2"></i>
                        </p>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="row">
                <div class="col-12">
                    <h5 class="font-weight-bold text-gray-800 mb-3">Tư vấn liên quan</h5>
                    @if (Model.TuVanSucKhoe != null)
                    {
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Chủ đề tư vấn
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            @Model.TuVanSucKhoe.TieuDe
                                        </div>
                                        <p class="mt-2 text-gray-600">
                                            @if(!string.IsNullOrEmpty(Model.TuVanSucKhoe.NoiDung) && Model.TuVanSucKhoe.NoiDung.Length > 100)
                                            {
                                                @Model.TuVanSucKhoe.NoiDung.Substring(0, 100) <span>...</span>
                                            }
                                            else
                                            {
                                                @Model.TuVanSucKhoe.NoiDung
                                            }
                                        </p>
                                    </div>
                                    <div class="col-auto">
                                        <a asp-controller="Chat" asp-action="Details" asp-route-id="@Model.TuVanSucKhoeId" class="btn btn-primary">
                                            Xem lại cuộc trò chuyện
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Không có thông tin tư vấn liên quan.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
