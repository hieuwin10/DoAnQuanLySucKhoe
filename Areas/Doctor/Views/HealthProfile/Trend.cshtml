@using DoAnChamSocSucKhoe.Models
@model IEnumerable<ChiSoSucKhoe>

@{
    ViewData["Title"] = "Xu Hướng Chỉ Số Sức Khỏe";
}

<div class="container mt-4">
    <h2 class="mb-4">Xu Hướng Chỉ Số Sức Khỏe - @ViewBag.PatientName</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-weight"></i> BMI Theo Thời Gian</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="bmiChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-tint"></i> Huyết Áp Theo Thời Gian</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="bloodPressureChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-heartbeat"></i> Nhịp Tim Theo Thời Gian</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="heartRateChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="fas fa-vial"></i> Đường Huyết Theo Thời Gian</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="glucoseChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Details" asp-route-id="@ViewBag.PatientId" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay Lại Chi Tiết
            </a>
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-list"></i> Danh Sách Bệnh Nhân
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Không có dữ liệu chỉ số sức khỏe để hiển thị xu hướng.
        </div>
    }
</div>

@using System.Linq
@{
    var healthMetrics = Model ?? Enumerable.Empty<DoAnChamSocSucKhoe.Models.ChiSoSucKhoe>();
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var data = @Html.Raw(Json.Serialize(healthMetrics.OrderBy(m => m.NgayDo).Select(m => new {
            date = m.NgayDo.ToString("yyyy-MM-dd"),
            bmi = m.CanNang > 0 && m.ChieuCao > 0 ? Math.Round((Convert.ToDouble(m.CanNang) / Math.Pow((double)m.ChieuCao / 100, 2)), 1) : (double?)null,
            systolic = m.HuyetAp,
            heartRate = m.NhipTim,
            glucose = m.DuongHuyet
        })));

        // BMI Chart
        new Chart(document.getElementById('bmiChart'), {
            type: 'line',
            data: {
                labels: data.map(d => d.date),
                datasets: [{
                    label: 'BMI',
                    data: data.map(d => d.bmi),
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });

        // Blood Pressure Chart
        new Chart(document.getElementById('bloodPressureChart'), {
            type: 'line',
            data: {
                labels: data.map(d => d.date),
                datasets: [{
                    label: 'Huyết Áp Tâm Thu',
                    data: data.map(d => d.systolic),
                    borderColor: 'rgb(255, 99, 132)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });

        // Heart Rate Chart
        new Chart(document.getElementById('heartRateChart'), {
            type: 'line',
            data: {
                labels: data.map(d => d.date),
                datasets: [{
                    label: 'Nhịp Tim (bpm)',
                    data: data.map(d => d.heartRate),
                    borderColor: 'rgb(255, 205, 86)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });

        // Glucose Chart
        new Chart(document.getElementById('glucoseChart'), {
            type: 'line',
            data: {
                labels: data.map(d => d.date),
                datasets: [{
                    label: 'Đường Huyết (mmol/L)',
                    data: data.map(d => d.glucose),
                    borderColor: 'rgb(153, 102, 255)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });
    </script>
}