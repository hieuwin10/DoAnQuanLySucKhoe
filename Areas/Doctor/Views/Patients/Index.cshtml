@model IEnumerable<DoAnChamSocSucKhoe.Models.NguoiDung>
@{
    ViewData["Title"] = "Danh sách Bệnh nhân";
}

<div class="container-fluid">
    <h2 class="mb-4">Danh sách Bệnh nhân</h2>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-users me-2"></i>Toàn bộ bệnh nhân
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.HoTen</td>
                            <td>@user.Email</td>
                            <td class="text-center">
                                <span class="badge @(user.TrangThai == "Hoạt động" ? "bg-success" : "bg-danger")">
                                    @user.TrangThai
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="#" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> Xem
                                </a>
                                <a href="#" class="btn btn-sm btn-info text-white">
                                    <i class="fas fa-history"></i> Lịch sử
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

