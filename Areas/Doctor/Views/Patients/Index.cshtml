@model IEnumerable<DoAnChamSocSucKhoe.Models.NguoiDung>
@{
    ViewData["Title"] = "Danh sách Bệnh nhân";
}

<div class="container-fluid">
    <h2 class="mb-4 fw-bold text-primary">Danh sách Bệnh nhân</h2>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-white py-3">
            <h5 class="m-0 font-weight-bold text-primary"><i class="fas fa-users me-2"></i>Toàn bộ bệnh nhân</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th class="py-3 ps-4">Họ tên</th>
                            <th class="py-3">Email</th>
                            <th class="text-center py-3">Trạng thái</th>
                            <th class="text-center py-3">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">@user.HoTen</td>
                                <td class="text-muted">@user.Email</td>
                                <td class="text-center">
                                    <span class="badge rounded-pill @(user.TrangThai == "Hoạt động" ? "bg-success" : "bg-danger") px-3 py-2">
                                        @user.TrangThai
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-controller="HealthRecords" asp-action="Detail" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="fas fa-eye me-1"></i> Xem
                                    </a>
                                    <a asp-controller="HealthRecords" asp-action="Detail" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-history me-1"></i> Lịch sử
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

