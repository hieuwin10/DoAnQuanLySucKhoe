@model DoAnChamSocSucKhoe.Areas.Doctor.Models.HealthRecordDetailViewModel

@{
    ViewData["Title"] = "Chi tiết Hồ sơ Sức khỏe";
    Layout = "~/Areas/Doctor/Views/Shared/_DoctorLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 fw-bold">Hồ Sơ Sức Khỏe</h1>
        <div>
            <button type="button" class="btn btn-success shadow-sm btn-lg" data-bs-toggle="modal" data-bs-target="#addReminderModal">
                <i class="fas fa-plus fa-sm text-white-50 me-2"></i> Tạo Nhắc Nhở
            </button>
            <a href="#" class="d-none d-sm-inline-block btn btn-lg btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50 me-2"></i> Xuất Báo Cáo</a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin cá nhân -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4 patient-info-card border-0 rounded-3">
                <div class="card-header py-3 bg-primary text-white rounded-top-3">
                    <h5 class="m-0 font-weight-bold">Thông Tin Bệnh Nhân</h5>
                </div>
                <div class="card-body text-center">
                    <img src="~/images/BN.png" alt="Patient Avatar" class="patient-avatar rounded-circle mb-3 border border-3 border-primary p-1" style="width: 120px; height: 120px; object-fit: cover;" />
                    <h3 class="font-weight-bold text-gray-800 mb-1">@Model.Patient?.HoTen</h3>
                    <p class="text-muted mb-3">@Model.Patient?.Email</p>
                    <hr class="w-100 my-3">
                    <div class="text-start px-3">
                        <div class="info-item mb-3 fs-5">
                            <i class="fas fa-birthday-cake me-3 text-primary" style="width: 25px;"></i>
                            <span>@(Model.HealthProfile?.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</span>
                        </div>
                        <div class="info-item mb-3 fs-5">
                            <i class="fas fa-venus-mars me-3 text-primary" style="width: 25px;"></i>
                            <span>@(Model.HealthProfile?.GioiTinh ?? "Chưa cập nhật")</span>
                        </div>
                        <div class="info-item mb-3 fs-5">
                            <i class="fas fa-map-marker-alt me-3 text-primary" style="width: 25px;"></i>
                            <span>@(Model.HealthProfile?.DiaChi ?? "Chưa cập nhật")</span>
                        </div>
                        <div class="info-item mb-3 fs-5">
                            <i class="fas fa-tint me-3 text-danger" style="width: 25px;"></i>
                            <span>Nhóm máu: <span class="fw-bold">@(Model.HealthProfile?.NhomMau ?? "Chưa cập nhật")</span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chỉ số sức khỏe -->
        <div class="col-xl-8 col-lg-7">
            <div class="row g-3 mb-4">
                <div class="col-xl-4 col-md-6">
                    <div class="metric-card bg-info text-white p-4 rounded-3 shadow-sm position-relative overflow-hidden h-100">
                        <div class="metric-value display-4 fw-bold">@Model.HealthProfile?.NhipTim<small class="fs-6"> bpm</small></div>
                        <div class="metric-label fs-5">Nhịp tim</div>
                        <i class="fas fa-heartbeat metric-icon position-absolute top-50 end-0 translate-middle-y me-3 opacity-25 fa-4x"></i>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
                    <div class="metric-card bg-danger text-white p-4 rounded-3 shadow-sm position-relative overflow-hidden h-100">
                        <div class="metric-value display-4 fw-bold">@Model.HealthProfile?.HuyetApTamThu/@Model.HealthProfile?.HuyetApTamTruong</div>
                        <div class="metric-label fs-5">Huyết áp (mmHg)</div>
                        <i class="fas fa-stethoscope metric-icon position-absolute top-50 end-0 translate-middle-y me-3 opacity-25 fa-4x"></i>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
                    <div class="metric-card bg-warning text-white p-4 rounded-3 shadow-sm position-relative overflow-hidden h-100">
                        <div class="metric-value display-4 fw-bold">@Model.HealthProfile?.DuongHuyet<small class="fs-6"> mg/dL</small></div>
                        <div class="metric-label fs-5">Đường huyết</div>
                        <i class="fas fa-burn metric-icon position-absolute top-50 end-0 translate-middle-y me-3 opacity-25 fa-4x"></i>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
                    <div class="metric-card bg-success text-white p-4 rounded-3 shadow-sm position-relative overflow-hidden h-100">
                        <div class="metric-value display-4 fw-bold">@Model.HealthProfile?.CanNang<small class="fs-6"> kg</small></div>
                        <div class="metric-label fs-5">Cân nặng</div>
                        <i class="fas fa-weight metric-icon position-absolute top-50 end-0 translate-middle-y me-3 opacity-25 fa-4x"></i>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
                    <div class="metric-card bg-primary text-white p-4 rounded-3 shadow-sm position-relative overflow-hidden h-100">
                        <div class="metric-value display-4 fw-bold">@Model.HealthProfile?.ChieuCao<small class="fs-6"> cm</small></div>
                        <div class="metric-label fs-5">Chiều cao</div>
                        <i class="fas fa-ruler-vertical metric-icon position-absolute top-50 end-0 translate-middle-y me-3 opacity-25 fa-4x"></i>
                    </div>
                </div>
                 <div class="col-xl-4 col-md-6">
                    <div class="metric-card bg-secondary text-white p-4 rounded-3 shadow-sm position-relative overflow-hidden h-100">
                        <div class="metric-value display-4 fw-bold">@Model.HealthProfile?.NgayCapNhat.ToString("dd/MM/yy")</div>
                        <div class="metric-label fs-5">Cập nhật lần cuối</div>
                        <i class="fas fa-calendar-check metric-icon position-absolute top-50 end-0 translate-middle-y me-3 opacity-25 fa-4x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch sử chỉ số sức khỏe -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-dark">
            <h6 class="m-0 font-weight-bold text-white">Lịch Sử Chỉ Số Sức Khỏe</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="healthMetricsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ngày Đo</th>
                            <th>Chiều Cao (cm)</th>
                            <th>Cân Nặng (kg)</th>
                            <th>Nhịp Tim</th>
                            <th>Đường Huyết</th>
                            <th>Huyết Áp</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.HealthMetrics)
                        {
                            <tr>
                                <td>@item.NgayDo.ToString("dd/MM/yyyy")</td>
                                <td>@item.ChieuCao</td>
                                <td>@item.CanNang</td>
                                <td>@item.NhipTim</td>
                                <td>@item.DuongHuyet</td>
                                <td>@item.HuyetAp</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Kế hoạch dinh dưỡng và tập luyện -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-success">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-utensils mr-2"></i>Kế Hoạch Dinh Dưỡng</h6>
                </div>
                <div class="card-body">
                    @if(Model.NutritionPlans.Any())
                    {
                        foreach (var plan in Model.NutritionPlans)
                        {
                            <div class="mb-3 p-3 border rounded">
                                <strong>@plan.TenKeHoach</strong> 
                                <small class="d-block text-muted">@plan.NgayBatDau.ToString("dd/MM/yyyy") - @plan.NgayKetThuc.ToString("dd/MM/yyyy")</small>
                                <p class="mt-2">@plan.MoTa</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Chưa có kế hoạch dinh dưỡng nào.</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-warning">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-dumbbell mr-2"></i>Kế Hoạch Tập Luyện</h6>
                </div>
                <div class="card-body">
                     @if(Model.ExercisePlans.Any())
                    {
                        foreach (var plan in Model.ExercisePlans)
                        {
                            <div class="mb-3 p-3 border rounded">
                                <strong>@plan.TenKeHoach</strong> 
                                <small class="d-block text-muted">@plan.NgayBatDau.ToString("dd/MM/yyyy") - @plan.NgayKetThuc.ToString("dd/MM/yyyy")</small>
                                <p class="mt-2">@plan.MoTa</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Chưa có kế hoạch tập luyện nào.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Nhắc nhở sức khỏe -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-info">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-bell mr-2"></i>Nhắc Nhở Sức Khỏe</h6>
                </div>
                <div class="card-body">
                    @if(Model.HealthReminders.Any())
                    {
                        foreach (var reminder in Model.HealthReminders)
                        {
                            <div class="mb-3 p-3 border rounded @(reminder.DaThucHien ? "bg-light" : "")">
                                <strong>@reminder.NoiDung</strong>
                                <small class="d-block text-muted">@reminder.ThoiGian.ToString("g")</small>
                                <span class="badge @(reminder.DaThucHien ? "bg-success" : "bg-warning")">
                                    @(reminder.DaThucHien ? "Đã thực hiện" : "Chưa thực hiện")
                                </span>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Chưa có nhắc nhở nào.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Reminder Modal -->
<div class="modal fade" id="addReminderModal" tabindex="-1" aria-labelledby="addReminderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addReminderModalLabel">Tạo Nhắc Nhở Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="CreateReminder" method="post">
                <div class="modal-body">
                    <input type="hidden" name="patientId" value="@Model.Patient?.Id" />
                    <div class="mb-3">
                        <label for="noiDung" class="form-label">Nội dung nhắc nhở</label>
                        <input type="text" class="form-control" id="noiDung" name="noiDung" required>
                    </div>
                    <div class="mb-3">
                        <label for="thoiGian" class="form-label">Thời gian</label>
                        <input type="datetime-local" class="form-control" id="thoiGian" name="thoiGian" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Lưu Nhắc Nhở</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script>
        $(document).ready(function () {
            $('#healthMetricsTable').DataTable({
                "order": [[0, "desc"]],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
                }
            });
        });
    </script>
}
