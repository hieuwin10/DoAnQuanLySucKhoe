@section Scripts {
    <script src="~/lib/microsoft-signalr/signalr.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Khá»Ÿi táº¡o AOS animations
        AOS.init({
            duration: 300,
            once: false
        });

        // Káº¿t ná»‘i SignalR
        const connection = new signalR.HubConnectionBuilder()
            .withUrl('/chatHub')
            .build();

        connection.on('ReceiveMessage', (user, message) => {
            const messagesDiv = document.getElementById('chat-messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message received';
            messageDiv.setAttribute('data-aos', 'fade-up');
            messageDiv.innerHTML = `
                <img src="/images/avatar-placeholder.png" alt="Avatar" class="message-avatar rounded-circle">
                <div class="message-content-wrapper">
                    <div class="message-bubble">
                        <div class="message-text">${message}</div>
                        <div class="message-meta">
                            <span class="message-time">${new Date().toLocaleTimeString('vi-VN', {hour: '2-digit', minute: '2-digit'})}</span>
                        </div>
                    </div>
                </div>
            `;
            messagesDiv.insertBefore(messageDiv, document.getElementById('typing-indicator'));
            AOS.refresh();
            scrollToBottom(true);
        });

        connection.on('UserTyping', (user, isTyping) => {
            const typingDiv = document.getElementById('typing-indicator');
            typingDiv.style.display = isTyping ? 'flex' : 'none';
        });

        connection.start().then(() => {
            connection.invoke('JoinGroup', '@Model.TuVanSucKhoeId');
            console.log('ÄÃ£ káº¿t ná»‘i SignalR');
        }).catch(err => console.error('Lá»—i SignalR:', err));

        // Xá»­ lÃ½ gá»­i tin nháº¯n
        document.getElementById('sendMessageForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const messageInput = document.getElementById('messageInput');
            const message = messageInput.value.trim();
            
            if (message) {
                // Hiá»ƒn thá»‹ tin nháº¯n ngay láº­p tá»©c (optimistic UI)
                addSentMessage(message);
                messageInput.value = '';
                
                // Gá»­i tin nháº¯n lÃªn server
                try {
                    await fetch('/Doctor/Chat/SendMessage', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: `consultationId=@Model.TuVanSucKhoeId&content=${encodeURIComponent(message)}`
                    });
                    connection.invoke('SendMessage', '@Model.TuVanSucKhoeId', message);
                } catch (error) {
                    console.error('Lá»—i gá»­i tin nháº¯n:', error);
                    alert('KhÃ´ng thá»ƒ gá»­i tin nháº¯n. Vui lÃ²ng thá»­ láº¡i.');
                }
            }
        });

        // ThÃªm tin nháº¯n Ä‘Ã£ gá»­i vÃ o giao diá»‡n
        function addSentMessage(message) {
            const messagesDiv = document.getElementById('chat-messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message sent';
            messageDiv.setAttribute('data-aos', 'fade-up');
            messageDiv.innerHTML = `
                <div class="message-content-wrapper">
                    <div class="message-bubble">
                        <div class="message-text">${message}</div>
                        <div class="message-meta">
                            <span class="message-time">${new Date().toLocaleTimeString('vi-VN', {hour: '2-digit', minute: '2-digit'})}</span>
                            <i class="fas fa-check-double message-status text-primary"></i>
                        </div>
                    </div>
                </div>
                <img src="/images/avatar-placeholder.png" alt="Avatar" class="message-avatar rounded-circle">
            `;
            messagesDiv.insertBefore(messageDiv, document.getElementById('typing-indicator'));
            AOS.refresh();
            scrollToBottom(true);
        }

        // Xá»­ lÃ½ typing indicator
        let typingTimeout;
        document.getElementById('messageInput').addEventListener('input', () => {
            connection.invoke('TypingIndicator', '@Model.TuVanSucKhoeId', true);
            clearTimeout(typingTimeout);
            typingTimeout = setTimeout(() => {
                connection.invoke('TypingIndicator', '@Model.TuVanSucKhoeId', false);
            }, 1000);
        });

        // Xá»­ lÃ½ emoji picker
        document.getElementById('emojiBtn').addEventListener('click', () => {
            const emojiPicker = document.getElementById('emojiPicker');
            emojiPicker.style.display = emojiPicker.style.display === 'none' ? 'block' : 'none';
        });

        function closeEmojiPicker() {
            document.getElementById('emojiPicker').style.display = 'none';
        }

        function insertEmoji(emoji) {
            const messageInput = document.getElementById('messageInput');
            messageInput.value += emoji;
            messageInput.focus();
        }

        // ÄÃ³ng emoji picker khi click bÃªn ngoÃ i
        document.addEventListener('click', (e) => {
            const emojiPicker = document.getElementById('emojiPicker');
            const emojiBtn = document.getElementById('emojiBtn');
            if (!emojiPicker.contains(e.target) && !emojiBtn.contains(e.target)) {
                emojiPicker.style.display = 'none';
            }
        });

        // Xá»­ lÃ½ chia sáº» há»“ sÆ¡ sá»©c khá»e
        document.getElementById('shareHealthBtn').addEventListener('click', async () => {
            if (confirm('Báº¡n cÃ³ cháº¯c cháº¯n muá»‘n chia sáº» há»“ sÆ¡ sá»©c khá»e cá»§a bá»‡nh nhÃ¢n nÃ y?')) {
                try {
                    const response = await fetch('/Doctor/Chat/ShareHealthProfile', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: `consultationId=@Model.TuVanSucKhoeId`
                    });
                    const result = await response.json();
                    if (result.success) {
                        alert('ÄÃ£ chia sáº» há»“ sÆ¡ sá»©c khá»e thÃ nh cÃ´ng!');
                        location.reload();
                    } else {
                        alert(result.message || 'CÃ³ lá»—i xáº£y ra!');
                    }
                } catch (error) {
                    console.error('Lá»—i chia sáº» há»“ sÆ¡:', error);
                    alert('KhÃ´ng thá»ƒ chia sáº» há»“ sÆ¡. Vui lÃ²ng thá»­ láº¡i.');
                }
            }
        });

        // Xá»­ lÃ½ upload file
        document.getElementById('uploadBtn').addEventListener('click', () => {
            document.getElementById('fileInput').click();
        });

        document.getElementById('fileInput').addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (event) => {
                    const previewContainer = document.getElementById('filePreview');
                    const previewImage = document.getElementById('previewImage');
                    previewImage.src = event.target.result;
                    previewContainer.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });

        function removeFilePreview() {
            document.getElementById('filePreview').style.display = 'none';
            document.getElementById('fileInput').value = '';
        }

        // Modal xem áº£nh phÃ³ng to
        function openImageModal(imageUrl) {
            const modal = new bootstrap.Modal(document.getElementById('imageModal'));
            document.getElementById('modalImage').src = imageUrl;
            modal.show();
        }

        // Xá»­ lÃ½ scroll to bottom
        const chatMessages = document.getElementById('chat-messages');
        const scrollToBottomBtn = document.getElementById('scrollToBottom');

        function scrollToBottom(smooth = false) {
            chatMessages.scrollTo({
                top: chatMessages.scrollHeight,
                behavior: smooth ? 'smooth' : 'auto'
            });
        }

        chatMessages.addEventListener('scroll', () => {
            const isNearBottom = chatMessages.scrollHeight - chatMessages.scrollTop - chatMessages.clientHeight < 100;
            scrollToBottomBtn.style.display = isNearBottom ? 'none' : 'flex';
        });

        scrollToBottomBtn.addEventListener('click', () => {
            scrollToBottom(true);
        });

        // Tá»± Ä‘á»™ng scroll xuá»‘ng khi load trang
        window.addEventListener('load', () => {
            scrollToBottom(false);
        });

        // Focus vÃ o input khi load trang
        document.getElementById('messageInput').focus();
    </script>
}

