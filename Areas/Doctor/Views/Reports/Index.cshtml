@{
    ViewData["Title"] = "Báo cáo & Thống kê";
    Layout = "~/Areas/Doctor/Views/Shared/_DoctorLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800 fw-bold">Báo cáo & Thống kê</h1>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-left-primary shadow h-100 py-2 border-0 rounded-3">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 fs-6">Tổng số bệnh nhân</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 display-6">150</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-3x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-left-success shadow h-100 py-2 border-0 rounded-3">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1 fs-6">Lịch hẹn hoàn thành</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 display-6">45</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-3x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4 border-0 rounded-3">
        <div class="card-header py-3 bg-white">
            <h5 class="m-0 font-weight-bold text-primary">Biểu đồ thống kê</h5>
        </div>
        <div class="card-body">
            <p class="fs-5 text-muted">Chức năng đang được phát triển...</p>
        </div>
    </div>
</div>
