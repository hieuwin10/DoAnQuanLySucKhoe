@page
@model YourProjectName.Areas.Patient.Pages.HealthProfileModel
@{
    ViewData["Title"] = "Hồ sơ sức khỏe";
    // Giả sử bạn có Layout riêng cho Area Patient
    Layout = "/Areas/Patient/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-5">
        <h4>Nhập chỉ số mới</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Có thể ẩn PatientId nếu bạn không muốn nó hiển thị trong form *@
            @* <input type="hidden" asp-for="Input.PatientId" /> *@

            <div class="form-group mb-3">
                <label asp-for="Input.RecordedDate" class="control-label"></label>
                <input asp-for="Input.RecordedDate" class="form-control" type="date" />
                <span asp-validation-for="Input.RecordedDate" class="text-danger"></span>
            </div>

            <div class="row g-2 mb-3">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.Weight" class="form-control" placeholder="Cân nặng" />
                        <label asp-for="Input.Weight"></label>
                        <span asp-validation-for="Input.Weight" class="text-danger"></span>
                    </div>
                </div>
                 <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.Height" class="form-control" placeholder="Chiều cao"/>
                        <label asp-for="Input.Height"></label>
                        <span asp-validation-for="Input.Height" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row g-2 mb-3">
                 <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.SystolicPressure" class="form-control" placeholder="HA Tâm thu" />
                        <label asp-for="Input.SystolicPressure"></label>
                        <span asp-validation-for="Input.SystolicPressure" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                     <div class="form-floating">
                        <input asp-for="Input.DiastolicPressure" class="form-control" placeholder="HA Tâm trương" />
                        <label asp-for="Input.DiastolicPressure"></label>
                        <span asp-validation-for="Input.DiastolicPressure" class="text-danger"></span>
                    </div>
                </div>
            </div>

             <div class="row g-2 mb-3">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.BloodSugar" class="form-control" placeholder="Đường huyết" />
                        <label asp-for="Input.BloodSugar"></label>
                        <span asp-validation-for="Input.BloodSugar" class="text-danger"></span>
                    </div>
                </div>
                 <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.HeartRate" class="form-control" placeholder="Nhịp tim" />
                        <label asp-for="Input.HeartRate"></label>
                        <span asp-validation-for="Input.HeartRate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Input.Notes" class="form-control" placeholder="Ghi chú thêm" style="height: 100px"></textarea>
                <label asp-for="Input.Notes"></label>
                <span asp-validation-for="Input.Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Lưu chỉ số</button>
            </div>
        </form>
    </div>

    <div class="col-md-7">
        <h4>Lịch sử chỉ số sức khỏe</h4>
        @if (Model.History != null && Model.History.Any())
        {
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.History[0].RecordedDate)</th>
                        <th>@Html.DisplayNameFor(model => model.History[0].Weight)</th>
                        @* <th>@Html.DisplayNameFor(model => model.History[0].Height)</th> *@
                        <th>Huyết áp</th> @* Gộp 2 cột HA *@
                        <th>@Html.DisplayNameFor(model => model.History[0].BloodSugar)</th>
                        <th>@Html.DisplayNameFor(model => model.History[0].HeartRate)</th>
                        <th>@Html.DisplayNameFor(model => model.History[0].Notes)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.History)
                    {
                        <tr>
                            <td>@item.RecordedDate.ToString("dd/MM/yyyy")</td>
                            <td>@Html.DisplayFor(modelItem => item.Weight)</td>
                            @* <td>@Html.DisplayFor(modelItem => item.Height)</td> *@
                            <td>@item.SystolicPressure/@item.DiastolicPressure</td>
                            <td>@Html.DisplayFor(modelItem => item.BloodSugar)</td>
                            <td>@Html.DisplayFor(modelItem => item.HeartRate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Chưa có dữ liệu nào được ghi nhận.</p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @* Thêm liên kết tới file js tùy chỉnh nếu có *@
    @* <script src="~/js/health-profile.js" asp-append-version="true"></script> *@
}

@* Thêm liên kết tới file css tùy chỉnh nếu có *@
