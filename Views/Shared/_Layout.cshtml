@using Microsoft.AspNetCore.Identity
@using DoAnChamSocSucKhoe.Models
@inject UserManager<NguoiDung> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Sức khỏe Online</title>
      <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico" type="image/favicon.ico" asp-append-version="true" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/favicon.ico" asp-append-version="true" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
      <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">        <div class="container">            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/Logo.png" alt="Logo" height="40" class="me-2">
                <span class="text-primary" style="font-size: 0.95rem;">Chăm sóc sức khỏe</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#home">Trang chủ</a>
                    </li>
                    @if (User.Identity == null || !User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#features">Tính năng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#testimonials">Đánh giá</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Liên hệ</a>
                        </li>
                    }
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        var user = await UserManager.GetUserAsync(User);
                        var hoTen = user?.HoTen;

                        @if (User.IsInRole("Patient") || User.HasClaim(c => c.Type == "CanViewProfile" && c.Value == "true"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Patient" asp-controller="HealthProfile" asp-action="Index" id="layoutHealthProfileBtn">
                                    <i class="fas fa-heartbeat me-1"></i> Hồ sơ sức khỏe
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Patient") || User.HasClaim(c => c.Type == "CanBookAppointment" && c.Value == "true"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Patient" asp-controller="Appointment" asp-action="Index">
                                    <i class="fas fa-calendar-check me-1"></i> Lịch hẹn
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Patient") || User.HasClaim(c => c.Type == "CanSendConsultation" && c.Value == "true"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Patient" asp-controller="TuVanSucKhoe" asp-action="Index">
                                    <i class="fas fa-comments-medical me-1"></i> Tư vấn
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Patient") || User.HasClaim(c => c.Type == "CanViewProfile" && c.Value == "true"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Patient" asp-controller="Reminder" asp-action="Index">
                                    <i class="fas fa-bell me-1"></i> Nhắc nhở
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Patient"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Patient" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-chart-line me-1"></i> Dashboard
                                </a>
                            </li>
                        }
                        
                        <li class="nav-item ms-lg-2">
                            <partial name="/Areas/Identity/Pages/Shared/_LoginPartial.cshtml" />
                        </li>
                    }
                    else
                    {                        <li class="nav-item ms-lg-2">
                            <a class="btn btn-outline-primary" href="/Identity/Account/Login">Đăng nhập</a>
                        </li>
                        <li class="nav-item ms-lg-2">
                            <a class="btn btn-primary" href="/Identity/Account/Register">Đăng ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>    <!-- Floating Buttons -->
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Patient"))
        {
            <partial name="_FloatingHealthProfileButton" />
        }
        <partial name="_FloatingChatAIButton" />
    }
    
    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- AOS Library for animations -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>    @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Patient"))
    {
        <script src="~/js/ensure-navigation.js"></script>
        <script src="~/js/force-navigation.js"></script>
        <script src="~/js/reminder-notification.js"></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/auth.js"></script>
    <script src="~/js/draggable-buttons.js"></script>
</body>
</html>
