@{
    ViewData["Title"] = "Dịch vụ";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4">Dịch vụ của chúng tôi</h1>
            <p class="lead">Cung cấp các giải pháp toàn diện cho việc quản lý sức khỏe cá nhân</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Theo dõi sức khỏe</h3>
                    <p class="card-text">
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success"></i> Theo dõi cân nặng</li>
                            <li><i class="fas fa-check text-success"></i> Theo dõi huyết áp</li>
                            <li><i class="fas fa-check text-success"></i> Theo dõi đường huyết</li>
                            <li><i class="fas fa-check text-success"></i> Theo dõi nhịp tim</li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-check fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Đặt lịch hẹn</h3>
                    <p class="card-text">
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success"></i> Đặt lịch hẹn online</li>
                            <li><i class="fas fa-check text-success"></i> Nhắc nhở lịch hẹn</li>
                            <li><i class="fas fa-check text-success"></i> Lịch sử khám bệnh</li>
                            <li><i class="fas fa-check text-success"></i> Đánh giá bác sĩ</li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-comments fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Tư vấn sức khỏe</h3>
                    <p class="card-text">
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success"></i> Tư vấn trực tuyến</li>
                            <li><i class="fas fa-check text-success"></i> Hỏi đáp với bác sĩ</li>
                            <li><i class="fas fa-check text-success"></i> Tư vấn dinh dưỡng</li>
                            <li><i class="fas fa-check text-success"></i> Tư vấn tập luyện</li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Bảng giá dịch vụ</h2>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Dịch vụ</th>
                            <th>Mô tả</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Theo dõi sức khỏe cơ bản</td>
                            <td>Theo dõi các chỉ số sức khỏe cơ bản</td>
                            <td>Miễn phí</td>
                        </tr>
                        <tr>
                            <td>Theo dõi sức khỏe nâng cao</td>
                            <td>Theo dõi chi tiết các chỉ số sức khỏe và phân tích</td>
                            <td>100.000đ/tháng</td>
                        </tr>
                        <tr>
                            <td>Tư vấn sức khỏe</td>
                            <td>Tư vấn trực tuyến với bác sĩ</td>
                            <td>200.000đ/lần</td>
                        </tr>
                        <tr>
                            <td>Gói VIP</td>
                            <td>Bao gồm tất cả các dịch vụ và ưu đãi đặc biệt</td>
                            <td>500.000đ/tháng</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 